<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog_upgrade"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        android:gravity="center"
        android:id="@+id/tv_code_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_15"
        android:text="@string/welcome_to_potensicpro"/>
    <TextView
        android:textSize="@dimen/sp_14"
        android:textColor="@color/colorBlack"
        android:gravity="left"
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:text="@string/welcome_to_potensicpro_text"/>
    <View
        android:id="@+id/line1"
        android:background="@color/color_line_dialog"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dp_25"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ll_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:textSize="@dimen/sp_16"
            android:textColor="@color/colorGray"
            android:gravity="center"
            android:id="@+id/btn_cancel"
            android:background="@color/colorTransparent"
            android:paddingTop="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_15"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:text="@string/welcome_to_potensicpro_not_agree"
            android:layout_weight="1"
            android:textAllCaps="false"/>
        <View
            android:background="@color/color_line_dialog"
            android:layout_width="@dimen/dp_05"
            android:layout_height="match_parent"/>
        <Button
            android:textSize="@dimen/sp_16"
            android:textColor="@color/color_dialog_update_bg"
            android:gravity="center"
            android:id="@+id/btn_confirm"
            android:background="@color/colorTransparent"
            android:paddingTop="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_15"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:text="@string/welcome_to_potensicpro_agree"
            android:layout_weight="1"
            android:textAllCaps="false"/>
    </LinearLayout>
</LinearLayout>
