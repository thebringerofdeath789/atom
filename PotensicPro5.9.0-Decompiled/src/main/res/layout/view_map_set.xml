<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_map_position_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/icon_map_set_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageButton
        android:id="@+id/btn_map_clear"
        android:background="@null"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@mipmap/icon_map_btn_delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btn_mark_save"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageButton
        android:id="@+id/btn_mark_save"
        android:background="@null"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@mipmap/icon_map_btn_save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/btn_map_clear"
        app:layout_constraintRight_toLeftOf="@+id/btn_map_mark"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageButton
        android:id="@+id/btn_map_mark"
        android:background="@null"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@mipmap/icon_map_btn_task"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/btn_mark_save"
        app:layout_constraintRight_toLeftOf="@+id/btn_map_show"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageButton
        android:id="@+id/btn_map_show"
        android:background="@null"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@mipmap/icon_map_btn_set_hide"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/btn_map_mark"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
