<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_circle"
    android:paddingLeft="@dimen/dp_13"
    android:paddingRight="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp_3">
    <TextView
        android:textSize="@dimen/sp_12"
        android:textColor="@color/colorWhite"
        android:id="@+id/tv_radius_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:text="@string/sys_basic_radius"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/layout_altitude_setting"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_radius_tips"
        app:layout_constraintTop_toBottomOf="@+id/tv_radius_tips"
        app:layout_constraintWidth_percent="0.88">
        <com.ipotensic.kernel.view.CursorEditText
            android:textSize="@dimen/sp_12"
            android:textColor="@color/text_color_setting_blue"
            android:gravity="center"
            android:id="@+id/tv_radius"
            android:background="@mipmap/img_bg_white_input_stroke"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="10"
            android:cursorVisible="true"
            android:numeric="integer"
            android:layout_weight="1"
            android:imeOptions="flagNoExtractUi|flagNoFullscreen"/>
        <TextView
            android:textSize="10sp"
            android:textColor="@color/text_color_setting_blue"
            android:id="@+id/tv_unit_circle_radius"
            android:paddingLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="m"/>
        <com.ipotensic.kernel.view.CustomSeekbar
            android:id="@+id/seekBar_radius"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:maxHeight="@dimen/dp_4"
            android:max="40"
            android:progressDrawable="@drawable/seekbar_style_blue"
            android:minHeight="@dimen/dp_4"
            android:thumb="@drawable/selector_thumb_bar"
            android:thumbOffset="@dimen/dp_0"
            android:layout_weight="6"
            android:paddingStart="@dimen/dp_5"
            android:paddingEnd="@dimen/dp_0"
            android:splitTrack="false"/>
    </LinearLayout>
    <TextView
        android:textSize="10sp"
        android:textColor="@color/white"
        android:id="@+id/tv_radius_ft"
        android:paddingLeft="5dp"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/units_ft_symbol"
        app:layout_constraintLeft_toLeftOf="@+id/tv_radius_tips"
        app:layout_constraintTop_toBottomOf="@+id/layout_altitude_setting"/>
    <TextView
        android:textSize="@dimen/sp_12"
        android:textColor="@color/colorWhite"
        android:id="@+id/tv_speed_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:text="@string/sys_basic_speed"
        app:layout_constraintLeft_toLeftOf="@+id/layout_altitude_setting"
        app:layout_constraintTop_toBottomOf="@+id/layout_altitude_setting"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/layout_surround_speed_setting"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_speed_tips"
        app:layout_constraintTop_toBottomOf="@+id/tv_speed_tips"
        app:layout_constraintWidth_percent="0.88">
        <com.ipotensic.kernel.view.CursorEditText
            android:textSize="@dimen/sp_12"
            android:textColor="@color/text_color_setting_blue"
            android:gravity="center"
            android:id="@+id/edt_speed"
            android:background="@mipmap/img_bg_white_input_stroke"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="20"
            android:cursorVisible="true"
            android:numeric="integer"
            android:layout_weight="1"
            android:imeOptions="flagNoExtractUi|flagNoFullscreen"/>
        <TextView
            android:textSize="10sp"
            android:textColor="@color/text_color_setting_blue"
            android:id="@+id/tv_unit_circle_speed"
            android:paddingLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="m/s"/>
        <com.ipotensic.kernel.view.CustomSeekbar
            android:id="@+id/seekBar_speed"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:maxHeight="@dimen/dp_4"
            android:max="40"
            android:progressDrawable="@drawable/seekbar_style_blue"
            android:minHeight="@dimen/dp_4"
            android:thumb="@drawable/selector_thumb_bar"
            android:thumbOffset="@dimen/dp_0"
            android:layout_weight="6"
            android:paddingStart="@dimen/dp_5"
            android:paddingEnd="@dimen/dp_0"
            android:splitTrack="false"/>
    </LinearLayout>
    <TextView
        android:textSize="10sp"
        android:textColor="@color/white"
        android:id="@+id/tv_speed_ft"
        android:paddingLeft="5dp"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/units_ft_symbol"
        app:layout_constraintLeft_toLeftOf="@+id/layout_surround_speed_setting"
        app:layout_constraintTop_toBottomOf="@+id/layout_surround_speed_setting"/>
    <TextView
        android:textSize="@dimen/sp_12"
        android:textColor="@color/colorWhite"
        android:id="@+id/tv_direction_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:text="@string/sys_basic_direction"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_speed_ft"/>
    <LinearLayout
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_direction_tips">
        <ImageButton
            android:id="@+id/iv_left"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_direction_left_selected"
            android:scaleType="center"/>
        <ImageButton
            android:id="@+id/iv_right"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_direction_right_disable"
            android:scaleType="center"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
