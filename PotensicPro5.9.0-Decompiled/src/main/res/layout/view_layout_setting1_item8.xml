<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_return_height_setting"
    android:paddingLeft="@dimen/dp_13"
    android:paddingRight="20dp"
    android:paddingBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp_3">
    <TextView
        android:textSize="@dimen/sp_12"
        android:textColor="@color/colorWhite"
        android:id="@+id/tv_return_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:text="@string/txt_set_range"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/layout_return_height"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_return_height"
        app:layout_constraintTop_toBottomOf="@+id/tv_return_height"
        app:layout_constraintWidth_percent="0.88">
        <com.ipotensic.kernel.view.CursorEditText
            android:textSize="@dimen/sp_12"
            android:textColor="@color/text_color_setting_blue"
            android:gravity="center"
            android:id="@+id/et_return_height_value"
            android:background="@mipmap/img_bg_white_input_stroke"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="10"
            android:cursorVisible="true"
            android:maxLength="4"
            android:numeric="integer"
            android:layout_weight="1"
            android:imeOptions="flagNoExtractUi|flagNoFullscreen"/>
        <TextView
            android:textSize="10sp"
            android:textColor="@color/text_color_setting_blue"
            android:id="@+id/tv_unit_return_height"
            android:paddingLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="m"/>
        <com.ipotensic.kernel.view.CustomSeekbar
            android:id="@+id/seekBar_return_height"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:maxHeight="@dimen/dp_4"
            android:max="40"
            android:progressDrawable="@drawable/seekbar_style_blue"
            android:minHeight="@dimen/dp_4"
            android:thumb="@drawable/selector_thumb_bar"
            android:thumbOffset="@dimen/dp_0"
            android:layout_weight="6"
            android:paddingStart="@dimen/dp_5"
            android:paddingEnd="@dimen/dp_0"
            android:splitTrack="false"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
