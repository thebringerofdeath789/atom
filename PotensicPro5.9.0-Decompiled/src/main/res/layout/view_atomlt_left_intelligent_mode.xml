<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/atomLT_intelligent_view_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/atomLT_intelligent_view_mode"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/atomLT_intelligent_mode"
            android:background="@color/colorBlack"
            android:layout_width="@dimen/dp_120"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:textSize="12sp"
                android:textColor="@color/text_color_setting_green"
                android:id="@+id/atomLT_tv_hot_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_78"
                android:text="@string/plane_hot_circle"
                android:drawableTop="@mipmap/icon_circle_flight_atomlt"
                app:layout_constraintLeft_toLeftOf="@+id/atomLT_intelligent_mode"
                app:layout_constraintRight_toRightOf="@+id/atomLT_intelligent_mode"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:textSize="12sp"
                android:textColor="@color/colorWhite"
                android:id="@+id/atomLT_tv_waypoint_flight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_40"
                android:text="@string/plane_waypoint_flight"
                android:drawableTop="@mipmap/icon_waypoint_flight_disconnect_atomlt"
                app:layout_constraintLeft_toLeftOf="@+id/atomLT_intelligent_mode"
                app:layout_constraintRight_toRightOf="@+id/atomLT_intelligent_mode"
                app:layout_constraintTop_toBottomOf="@+id/atomLT_tv_hot_circle"/>
            <TextView
                android:textSize="12sp"
                android:textColor="@color/colorWhite"
                android:id="@+id/atomLT_tv_follow_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_40"
                android:text="@string/plane_follow_up"
                android:drawableTop="@mipmap/icon_follow_me_disconnect_atomlt"
                app:layout_constraintLeft_toLeftOf="@+id/atomLT_intelligent_mode"
                app:layout_constraintRight_toRightOf="@+id/atomLT_intelligent_mode"
                app:layout_constraintTop_toBottomOf="@+id/atomLT_tv_waypoint_flight"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <include
            android:id="@+id/atomLT_intelligent_mode_right"
            android:background="@color/colorEightyPercent"
            android:layout_width="280dp"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/atomLT_intelligent_mode"
            app:layout_constraintTop_toTopOf="parent"
            layout="@layout/view_atomlt_circle_mode_setting"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/atomLT_intelligent_view_blank"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/atomLT_intelligent_view_mode"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
