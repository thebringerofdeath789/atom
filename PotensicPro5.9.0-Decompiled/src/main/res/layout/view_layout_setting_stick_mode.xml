<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/view_layout_setting_stick_mode_0"
    android:background="@color/colorOpaque"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/base_line_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_begin="15dp"/>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/base_line_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_end="15dp"/>
    <RelativeLayout
        android:id="@+id/layout_top"
        android:background="@drawable/bg_setting_calibration_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/base_line_left"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageButton
            android:id="@+id/ib_back"
            android:background="@null"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/img_btn_setting_back"
            android:scaleType="center"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="@dimen/txt_size_setting_big"
            android:textColor="@color/white"
            android:id="@+id/tv_title"
            android:paddingTop="10dp"
            android:paddingRight="8dp"
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_flight_stick_mode"
            android:layout_centerInParent="true"/>
        <com.ipotensic.baselib.views.ShadowLayout
            android:id="@+id/shadow_layout"
            android:tag="binding_1"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:yc_cornerRadius="7dp"
            app:yc_shadowColor="@color/colorTranspercentText"
            app:yc_shadowLimit="1dp">
            <TextView
                android:textSize="10sp"
                android:textColor="@color/text_mini_geo_color"
                android:gravity="center"
                android:id="@+id/tv_code_title"
                android:background="@drawable/bg_dialog_toast_shape"
                android:paddingLeft="16dp"
                android:paddingTop="8dp"
                android:paddingRight="16dp"
                android:paddingBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_disconnect_set_fail"/>
        </com.ipotensic.baselib.views.ShadowLayout>
        <ImageButton
            android:layout_gravity="right"
            android:id="@+id/btn_exit"
            android:background="@null"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_bg_setting_back"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <ScrollView
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingBottom="@dimen/dp_10"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fillViewport="true"
        app:layout_constraintLeft_toRightOf="@+id/base_line_left"
        app:layout_constraintRight_toLeftOf="@+id/base_line_right"
        app:layout_constraintTop_toBottomOf="@+id/layout_top">
        <LinearLayout
            android:orientation="horizontal"
            android:background="@drawable/bg_remote_controller_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:textSize="@dimen/dp_14"
                    android:textColor="@color/colorWhite"
                    android:gravity="center"
                    android:id="@+id/tv_mode_1"
                    android:tag="binding_2"
                    android:background="@drawable/bg_setting_button_select_left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sys_remote_american_hand"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iv_left"
                        android:tag="binding_3"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginTop="@dimen/dp_25"
                        android:src="@mipmap/icon_virtual_rocker_model1_left"
                        android:scaleType="fitXY"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintWidth_percent="0.5"/>
                    <TextView
                        android:textSize="@dimen/sp_9"
                        android:textColor="@color/colorWhite"
                        android:gravity="center"
                        android:id="@+id/tv_left"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/remote_turn_left"
                        app:layout_constraintBottom_toBottomOf="@+id/iv_left"
                        app:layout_constraintRight_toLeftOf="@+id/iv_left"
                        app:layout_constraintTop_toTopOf="@+id/iv_left"
                        app:layout_constraintWidth_percent="0.2"/>
                    <TextView
                        android:textSize="@dimen/sp_9"
                        android:textColor="@color/colorWhite"
                        android:gravity="center"
                        android:id="@+id/tv_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/remote_turn_right"
                        app:layout_constraintBottom_toBottomOf="@+id/iv_left"
                        app:layout_constraintLeft_toRightOf="@+id/iv_left"
                        app:layout_constraintTop_toTopOf="@+id/iv_left"/>
                    <TextView
                        android:textSize="@dimen/sp_9"
                        android:textColor="@color/colorWhite"
                        android:id="@+id/tv_up"
                        android:tag="binding_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toTopOf="@+id/iv_left"
                        app:layout_constraintLeft_toLeftOf="@+id/iv_left"
                        app:layout_constraintRight_toRightOf="@+id/iv_left"/>
                    <TextView
                        android:textSize="@dimen/sp_9"
                        android:textColor="@color/colorWhite"
                        android:id="@+id/tv_down"
                        android:tag="binding_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="@+id/iv_left"
                        app:layout_constraintRight_toRightOf="@+id/iv_left"
                        app:layout_constraintTop_toBottomOf="@+id/iv_left"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <TextView
                    android:textSize="@dimen/sp_12"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite"
                    android:id="@+id/tv_left_stick"
                    android:paddingBottom="@dimen/dp_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="@string/remote_left_stick"
                    app:layout_constraintLeft_toLeftOf="@+id/iv_left"
                    app:layout_constraintRight_toRightOf="@+id/iv_left"
                    app:layout_constraintTop_toBottomOf="@+id/tv_down"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:textSize="@dimen/dp_14"
                    android:textColor="@color/colorWhite"
                    android:gravity="center"
                    android:id="@+id/tv_mode_2"
                    android:tag="binding_6"
                    android:background="@drawable/bg_setting_model_default_right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sys_remote_japan_hand"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iv_right"
                        android:tag="binding_7"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginTop="@dimen/dp_25"
                        android:src="@mipmap/icon_virtual_rocker_model1_right"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintWidth_percent="0.5"/>
                    <TextView
                        android:textSize="@dimen/sp_9"
                        android:textColor="@color/colorWhite"
                        android:gravity="center"
                        android:id="@+id/tv_left_side"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/remote_left_side"
                        app:layout_constraintBottom_toBottomOf="@+id/iv_right"
                        app:layout_constraintRight_toLeftOf="@+id/iv_right"
                        app:layout_constraintTop_toTopOf="@+id/iv_right"/>
                    <TextView
                        android:textSize="@dimen/sp_9"
                        android:textColor="@color/colorWhite"
                        android:gravity="left"
                        android:id="@+id/tv_right_side"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/remote_right_side"
                        app:layout_constraintBottom_toBottomOf="@+id/iv_right"
                        app:layout_constraintLeft_toRightOf="@+id/iv_right"
                        app:layout_constraintTop_toTopOf="@+id/iv_right"/>
                    <TextView
                        android:textSize="@dimen/sp_9"
                        android:textColor="@color/colorWhite"
                        android:id="@+id/tv_forward"
                        android:tag="binding_8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toTopOf="@+id/iv_right"
                        app:layout_constraintLeft_toLeftOf="@+id/iv_right"
                        app:layout_constraintRight_toRightOf="@+id/iv_right"/>
                    <TextView
                        android:textSize="@dimen/sp_9"
                        android:textColor="@color/colorWhite"
                        android:id="@+id/tv_backward"
                        android:tag="binding_9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="@+id/iv_right"
                        app:layout_constraintRight_toRightOf="@+id/iv_right"
                        app:layout_constraintTop_toBottomOf="@+id/iv_right"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <TextView
                    android:textSize="@dimen/dp_12"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite"
                    android:id="@+id/tv_remote_right_stick"
                    android:paddingBottom="@dimen/dp_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="@string/remote_right_stick"
                    app:layout_constraintLeft_toLeftOf="@+id/iv_right"
                    app:layout_constraintRight_toRightOf="@+id/iv_right"
                    app:layout_constraintTop_toBottomOf="@+id/tv_backward"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
