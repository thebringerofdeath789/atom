<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_35"
        app:cardCornerRadius="@dimen/dp_14"
        app:cardElevation="@dimen/dp_0">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:background="@drawable/bg_dialog_no_upgrade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:textSize="@dimen/sp_16"
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:id="@+id/tv_dialog_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_50"
                android:text="@string/dialog_exit_upgrade"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <ScrollView
                android:id="@+id/scroll_view"
                android:paddingLeft="@dimen/dp_25"
                android:paddingRight="@dimen/dp_25"
                android:paddingBottom="@dimen/dp_20"
                android:scrollbars="none"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_7"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_dialog_title">
                <TextView
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/colorWhite"
                    android:gravity="center"
                    android:id="@+id/tv_dialog_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dialog_exit_upgrade_describe"
                    android:singleLine="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_dialog_title"
                    app:layout_constraintWidth_percent="0.8"/>
            </ScrollView>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/ll_btn"
                android:background="@drawable/bg_dialog_no_upgrade_bottom"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/scroll_view">
                <Button
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/white"
                    android:id="@+id/btn_cancel"
                    android:background="@drawable/bg_left_bottom_corner"
                    android:paddingTop="@dimen/dp_15"
                    android:paddingBottom="@dimen/dp_15"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:text="@string/dialog_cancel"
                    android:layout_weight="1"/>
                <Button
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/white"
                    android:id="@+id/btn_confirm"
                    android:background="@null"
                    android:paddingTop="@dimen/dp_15"
                    android:paddingBottom="@dimen/dp_15"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:text="@string/dialog_confirm"
                    android:layout_weight="1"/>
            </LinearLayout>
            <Button
                android:textSize="@dimen/sp_15"
                android:textColor="@color/colorWhite"
                android:id="@+id/btn_ok"
                android:background="@drawable/bg_dialog_no_upgrade_bottom"
                android:paddingTop="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_15"
                android:visibility="visible"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/dialog_ok"
                android:textAllCaps="false"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/scroll_view"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <ImageView
        android:layout_gravity="center_horizontal"
        android:id="@+id/iv_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/img_dialog_failure"/>
</FrameLayout>
