<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_30"
    android:layout_marginRight="@dimen/dp_30">
    <ImageButton
        android:id="@+id/btn_cancel"
        android:background="@null"
        android:padding="@dimen/dp_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:src="@mipmap/icon_btn_upgrading_cancel"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"/>
    <RelativeLayout
        android:id="@+id/layout_upgrade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <ImageView
            android:id="@+id/upgrade_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:src="@mipmap/icon_upgrade_logo"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:textSize="@dimen/sp_18"
            android:textColor="@color/colorBlack"
            android:id="@+id/tv_code_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:text="@string/dialog_firmware_upgrade"
            android:layout_below="@+id/upgrade_logo"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:textSize="@dimen/sp_16"
            android:id="@+id/tv_upgrade_info"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:text=" Name:flight control\10 Version:v2.0.1\10 Size:1M\10 Update:2019.08.13\10"
            android:layout_below="@+id/tv_code_title"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:textColor="@color/colorBlack"
            android:gravity="left"
            android:id="@+id/tv_upgrade_detail"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:text="1.The attitude algorithm was updated and the control feel was optimized. 2.Flying posture is more stable."
            android:layout_below="@+id/tv_upgrade_info"/>
        <Button
            android:textSize="@dimen/sp_10"
            android:textColor="@color/colorWhite"
            android:gravity="top|center_horizontal"
            android:id="@+id/btn_upgrade"
            android:background="@drawable/bg_btn_upgrade_blue"
            android:paddingTop="@dimen/dp_5"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_70"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_15"
            android:text="@string/sys_to_upgrade"
            android:drawableTop="@mipmap/icon_btn_upgrade_top_white"
            android:layout_below="@+id/tv_upgrade_detail"
            android:layout_centerHorizontal="true"
            android:textAllCaps="false"/>
    </RelativeLayout>
    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        layout="@layout/view_dialog_upgrade_conditions"/>
    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        layout="@layout/view_dialog_upgrading"/>
</RelativeLayout>
