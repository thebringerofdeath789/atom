<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageButton
        android:id="@+id/iv_map_position"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_10"
        android:src="@mipmap/icon_map_btn_position"
        app:layout_constraintRight_toLeftOf="@+id/iv_map_type"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageButton
        android:id="@+id/iv_map_type"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_10"
        android:src="@mipmap/icon_map_mode"
        app:layout_constraintRight_toLeftOf="@+id/iv_map_compass_bg"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/iv_map_compass_bg"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_0"
        android:src="@mipmap/icon_map_btn_compass_bg"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageButton
        android:id="@+id/iv_map_lock"
        android:background="@null"
        android:visibility="visible"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        android:src="@mipmap/icon_map_lock"
        app:layout_constraintBottom_toBottomOf="@+id/iv_map_compass_bg"
        app:layout_constraintLeft_toLeftOf="@+id/iv_map_compass_bg"
        app:layout_constraintRight_toRightOf="@+id/iv_map_compass_bg"
        app:layout_constraintTop_toTopOf="@+id/iv_map_compass_bg"/>
    <include
        android:id="@+id/view_map_position"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@+id/iv_map_position"
        app:layout_constraintTop_toBottomOf="@+id/iv_map_position"
        layout="@layout/view_map_position_find_drone"/>
    <include
        android:id="@+id/view_map_type"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@+id/iv_map_type"
        app:layout_constraintTop_toBottomOf="@+id/iv_map_type"
        layout="@layout/view_map_type"/>
    <include
        android:id="@+id/view_map_set"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintRight_toRightOf="@+id/iv_map_compass_bg"
        app:layout_constraintTop_toBottomOf="@+id/iv_map_compass_bg"
        layout="@layout/view_mapbox_tool_info_show"/>
    <ImageButton
        android:id="@+id/iv_map_set_hide"
        android:background="@null"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:src="@mipmap/icon_map_btn_set"
        app:layout_constraintRight_toRightOf="@+id/iv_map_compass_bg"
        app:layout_constraintTop_toBottomOf="@+id/iv_map_compass_bg"/>
</androidx.constraintlayout.widget.ConstraintLayout>
