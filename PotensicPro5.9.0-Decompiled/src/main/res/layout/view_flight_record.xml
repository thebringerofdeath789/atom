<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_flight_point_record_bg"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/ll_distance"
        android:background="@mipmap/icon_map_flight_record_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:textSize="@dimen/sp_12"
            android:textColor="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/flight_record"/>
        <TextView
            android:textSize="@dimen/sp_9"
            android:textColor="@color/colorWhite"
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="09, 09, 2019"/>
    </LinearLayout>
    <TextView
        android:textSize="@dimen/sp_11"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:id="@+id/tv_point_flight"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_35"
        android:text="@string/point_record"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_distance"/>
    <View
        android:id="@+id/line1"
        android:background="@color/colorWhite"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_05"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_point_flight"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/ll_speed_horizontal"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_35"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line1">
        <TextView
            android:textSize="@dimen/sp_11"
            android:textColor="@color/colorWhite"
            android:gravity="right"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:text="@string/flight_speed"
            android:layout_weight="1"/>
        <TextView
            android:textSize="@dimen/sp_11"
            android:textColor="@color/colorWhite"
            android:id="@+id/edt_speed"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:text="30km/h"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/dp_2"/>
    </LinearLayout>
    <View
        android:id="@+id/line2"
        android:background="@color/colorWhite"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_05"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_speed_horizontal"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/ll_height"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_35"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line2">
        <TextView
            android:textSize="@dimen/sp_11"
            android:textColor="@color/colorWhite"
            android:gravity="right"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:text="@string/flight_height"
            android:layout_weight="1"/>
        <TextView
            android:textSize="@dimen/sp_11"
            android:textColor="@color/colorWhite"
            android:id="@+id/tv_height"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:text="30m"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/dp_2"/>
    </LinearLayout>
    <View
        android:id="@+id/line3"
        android:background="@color/colorWhite"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_05"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_height"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/ll_mileage"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_35"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line3">
        <TextView
            android:textSize="@dimen/sp_11"
            android:textColor="@color/colorWhite"
            android:gravity="right"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:text="@string/flight_mileage"
            android:layout_weight="1"/>
        <TextView
            android:textSize="@dimen/sp_11"
            android:textColor="@color/colorWhite"
            android:id="@+id/tv_mileage"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:text="5.6km"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/dp_2"/>
    </LinearLayout>
    <View
        android:id="@+id/line4"
        android:background="@color/colorWhite"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_05"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_mileage"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/ll_duration"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_35"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line4">
        <TextView
            android:textSize="@dimen/sp_11"
            android:textColor="@color/colorWhite"
            android:gravity="right"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:text="@string/flight_duration"
            android:layout_weight="1"/>
        <TextView
            android:textSize="@dimen/sp_11"
            android:textColor="@color/colorWhite"
            android:id="@+id/tv_duration"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:text="16min"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/dp_2"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
