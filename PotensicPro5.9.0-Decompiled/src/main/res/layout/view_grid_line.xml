<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/horizontal_line_1"
        android:background="@color/colorSixPercent"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:elevation="@dimen/dp_4"
        android:outlineProvider="bounds"
        app:layout_constraintBottom_toTopOf="@+id/horizontal_line_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/horizontal_line_2"
        android:background="@color/colorSixPercent"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:elevation="@dimen/dp_4"
        android:outlineProvider="bounds"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontal_line_1"/>
    <View
        android:id="@+id/vertical_line_1"
        android:background="@color/colorSixPercent"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:elevation="@dimen/dp_4"
        android:outlineProvider="bounds"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/vertical_line_2"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/vertical_line_2"
        android:background="@color/colorSixPercent"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:elevation="@dimen/dp_4"
        android:outlineProvider="bounds"
        app:layout_constraintLeft_toRightOf="@+id/vertical_line_1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
