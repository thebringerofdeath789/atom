<?xml version="1.0" encoding="utf-8"?>
<com.ipotensic.baselib.views.RoundRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:id="@+id/tv_title"
            android:background="@color/color_line"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/first_click_photo_album_app_would_like_to_access_your_photos_title"/>
        <TextView
            android:textSize="14sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:id="@+id/tv_content"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/first_click_photo_album_app_would_like_to_access_your_photos_tips"/>
        <LinearLayout
            android:orientation="horizontal"
            android:background="@color/color_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="14sp"
                android:textColor="@color/colorSettingSelectBg"
                android:gravity="center"
                android:id="@+id/tv_not_allow"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/button_refuse"
                android:layout_weight="1"/>
            <View
                android:background="@color/color_50_gray"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"/>
            <TextView
                android:textSize="14sp"
                android:textColor="@color/colorSettingSelectBg"
                android:gravity="center"
                android:id="@+id/tv_allow"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/button_allow"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</com.ipotensic.baselib.views.RoundRelativeLayout>
