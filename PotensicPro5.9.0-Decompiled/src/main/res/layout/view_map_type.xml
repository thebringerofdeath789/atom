<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_map_type_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_map_type"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageButton
        android:id="@+id/iv_map_standard"
        android:background="@null"
        android:padding="1.5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:src="@mipmap/icon_map_standards"
        app:layout_constraintLeft_toLeftOf="@+id/iv_map_type_bg"
        app:layout_constraintRight_toLeftOf="@+id/iv_map_satellite"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"/>
    <ImageButton
        android:id="@+id/iv_map_satellite"
        android:background="@mipmap/icon_map_style_select"
        android:padding="1.5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_map_satellite"
        app:layout_constraintLeft_toRightOf="@+id/iv_map_standard"
        app:layout_constraintRight_toLeftOf="@+id/iv_map_night"
        app:layout_constraintTop_toTopOf="@+id/iv_map_standard"/>
    <ImageButton
        android:id="@+id/iv_map_night"
        android:background="@null"
        android:padding="1.5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_map_night"
        app:layout_constraintLeft_toRightOf="@+id/iv_map_satellite"
        app:layout_constraintRight_toRightOf="@+id/iv_map_type_bg"
        app:layout_constraintTop_toTopOf="@+id/iv_map_standard"/>
    <TextView
        android:textSize="@dimen/sp_9"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/tv_map_standard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/map_mode_standard"
        android:lineSpacingExtra="-4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_map_satellite"
        app:layout_constraintTop_toBottomOf="@+id/iv_map_satellite"/>
    <TextView
        android:textSize="@dimen/sp_9"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/tv_map_satellite"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/map_mode_satellite"
        android:lineSpacingExtra="-4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tv_map_standard"
        app:layout_constraintRight_toLeftOf="@+id/tv_map_night"
        app:layout_constraintTop_toBottomOf="@+id/iv_map_night"/>
    <TextView
        android:textSize="@dimen/sp_9"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/tv_map_night"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/map_mode_standardnight"
        android:lineSpacingExtra="-4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tv_map_satellite"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_map_standard"/>
</androidx.constraintlayout.widget.ConstraintLayout>
