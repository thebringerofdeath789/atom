<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="@dimen/sp_15"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/tv_repair_title"
        android:background="@drawable/bg_dialog_repair_top"
        android:padding="@dimen/dp_11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/repairing_fail"/>
    <ScrollView
        android:background="@color/color_bg_upgrade_dialog"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:textSize="@dimen/sp_12"
            android:textColor="@color/white"
            android:id="@+id/tv_content"
            android:padding="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/repairing_tips"
            android:lineSpacingExtra="@dimen/dp_3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_repair_title"/>
    </ScrollView>
    <Button
        android:textSize="@dimen/sp_16"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/btn_ok"
        android:background="@drawable/bg_dialog_repair_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_43"
        android:text="@string/dialog_ok"/>
</LinearLayout>
