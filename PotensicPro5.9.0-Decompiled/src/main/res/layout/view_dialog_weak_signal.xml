<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_main"
    android:background="@color/color_50_black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.github.mmin18.widget.RealtimeBlurView
        android:id="@+id/view_real_time_blur"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:realtimeBlurRadius="@dimen/dp_10"
        app:realtimeOverlayColor="@color/color50TransBlack"/>
    <View
        android:id="@+id/bg_view"
        android:background="@color/black"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <ImageView
        android:id="@+id/img_temp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"/>
    <TextView
        android:textSize="@dimen/sp_18"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/flight_interface_adjust_the_antennas_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/guide_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.5"/>
    <ImageView
        android:id="@+id/imgLeft"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@mipmap/img_weak_signal_left"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="406:187"
        app:layout_constraintHeight_percent="0.48"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/guide_center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.34"/>
    <ImageView
        android:id="@+id/imgRight"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@mipmap/img_weak_signal_right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="406:187"
        app:layout_constraintHeight_percent="0.48"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintLeft_toLeftOf="@+id/guide_center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.34"/>
    <TextView
        android:textSize="10sp"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/flight_interface_adjust_the_antennas_tips"
        app:layout_constraintBottom_toTopOf="@+id/cb_no_longer"
        app:layout_constraintLeft_toLeftOf="@+id/imgLeft"
        app:layout_constraintRight_toRightOf="@+id/imgRight"
        app:layout_constraintTop_toBottomOf="@+id/imgLeft"/>
    <CheckBox
        android:textSize="@dimen/sp_12"
        android:textColor="@color/white"
        android:id="@+id/cb_no_longer"
        android:padding="@dimen/dp_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:button="@drawable/bg_battery_safety_check_selector"
        android:text="@string/flight_interface_one_key_take_off__check_the_battery_installation_ignore_options"
        app:layout_constraintBottom_toTopOf="@+id/btn_confirm"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <Button
        android:textColor="@color/white"
        android:id="@+id/btn_confirm"
        android:background="@mipmap/icon_bg_battery_safety_confirm_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:text="@string/dialog_confirm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
