<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_my_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/mapbox_marker_icon_my_position"
        android:layout_centerInParent="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.ipotensic.kernel.view.DividerView
        android:layout_width="3dp"
        android:layout_height="@dimen/dp_80"
        android:layout_above="@+id/iv_my_location"
        android:layout_centerInParent="true"
        android:layerType="software"
        app:dashGap="3dp"
        app:dashLength="3dp"
        app:dashThickness="3dp"
        app:divider_line_color="@color/color_divider_start"
        app:divider_orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/iv_my_location"
        app:layout_constraintLeft_toLeftOf="@+id/iv_my_location"
        app:layout_constraintRight_toRightOf="@+id/iv_my_location"/>
</androidx.constraintlayout.widget.ConstraintLayout>
