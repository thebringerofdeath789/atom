<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textSize="@dimen/sp_16"
        android:textColor="@color/white"
        android:id="@+id/tv_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login2"
        android:drawableRight="@mipmap/img_arrow_right"
        android:drawablePadding="@dimen/dp_6"
        android:textAllCaps="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.96"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.066"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:textSize="@dimen/sp_40"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:id="@+id/tv_code_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.096"/>
        <TextView
            android:textColor="@color/color_login_blue"
            android:id="@+id/tv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome_to_register"
            android:drawableTop="@mipmap/img_logo_login"
            android:drawablePadding="@dimen/dp_5"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.24"/>
        <TextView
            android:textSize="@dimen/sp_10"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/tv_choose_country"
            android:background="@drawable/bg_logo_choose_country"
            android:paddingLeft="@dimen/dp_11"
            android:paddingTop="@dimen/dp_4"
            android:paddingRight="@dimen/dp_9"
            android:paddingBottom="@dimen/dp_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choose_country"
            android:drawableRight="@mipmap/img_logo_choose_country"
            android:drawablePadding="@dimen/dp_2"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.4"/>
        <TextView
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_user_agreement"
            android:gravity="center"
            android:id="@+id/tv_user_agreement_content"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:text="@string/terms_and_agreements"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_choose_country"
            app:layout_constraintWidth_percent="0.8"/>
        <EditText
            android:textSize="@dimen/sp_14"
            android:textColorHint="@color/color_login_register_text"
            android:id="@+id/edit_register_username"
            android:background="@drawable/line_et_bg"
            android:paddingLeft="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_5"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_50"
            android:hint="@string/email_address"
            android:singleLine="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_user_agreement_content"
            app:layout_constraintWidth_percent="0.752"/>
        <TextView
            android:textSize="@dimen/sp_11"
            android:textColor="@color/colorRemainedBattery"
            android:id="@+id/tv_email_error_tips"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:text="@string/email_error_tips"
            android:drawableLeft="@mipmap/img_error_tips"
            android:drawablePadding="@dimen/dp_2"
            android:lineSpacingExtra="-2dp"
            app:layout_constraintLeft_toLeftOf="@+id/edit_register_username"
            app:layout_constraintRight_toRightOf="@+id/edit_register_username"
            app:layout_constraintTop_toBottomOf="@+id/edit_register_username"/>
        <EditText
            android:textSize="@dimen/sp_14"
            android:textColorHint="@color/color_login_register_text"
            android:id="@+id/edit_register_password"
            android:background="@drawable/line_et_bg"
            android:paddingLeft="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_5"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_50"
            android:hint="@string/password"
            android:password="true"
            android:maxLength="16"
            android:inputType="text"
            android:imeOptions="actionDone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_register_username"
            app:layout_constraintWidth_percent="0.752"/>
        <CheckBox
            android:gravity="center"
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/password_selector"
            app:layout_constraintBottom_toBottomOf="@+id/edit_register_password"
            app:layout_constraintRight_toRightOf="@+id/edit_register_password"/>
        <TextView
            android:textSize="@dimen/sp_11"
            android:textColor="@color/colorRemainedBattery"
            android:id="@+id/tv_password_error_tips"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:text="@string/password_error_tips"
            android:drawableLeft="@mipmap/img_error_tips"
            android:drawablePadding="@dimen/dp_2"
            android:lineSpacingExtra="-2dp"
            app:layout_constraintLeft_toLeftOf="@+id/edit_register_password"
            app:layout_constraintRight_toRightOf="@+id/edit_register_password"
            app:layout_constraintTop_toBottomOf="@+id/edit_register_password"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.93">
        <Button
            android:textSize="@dimen/sp_16"
            android:textColor="@color/white"
            android:id="@+id/btn_register"
            android:background="@mipmap/img_btn_login_commit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
