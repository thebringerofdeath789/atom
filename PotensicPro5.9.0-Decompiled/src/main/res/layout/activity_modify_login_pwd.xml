<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:gravity="center"
        android:background="@drawable/gradual_left_to_right_blue"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.22"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageButton
        android:id="@+id/btn_return"
        android:background="@null"
        android:padding="@dimen/dp_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:src="@mipmap/img_btn_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05"/>
    <TextView
        android:textSize="@dimen/sp_18"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/me_modify_login_pwd"
        app:layout_constraintBottom_toBottomOf="@+id/btn_return"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_return"
        app:layout_constraintWidth_percent="0.7"/>
    <EditText
        android:textSize="@dimen/sp_12"
        android:textColor="@color/color_modify_pwd_text"
        android:id="@+id/et_old_pwd"
        android:background="@drawable/line_et_bg"
        android:paddingBottom="@dimen/dp_5"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:hint="@string/me_hint_old_pwd"
        android:password="true"
        android:drawableRight="@mipmap/img_icon_pwd_lock"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.33"
        app:layout_constraintWidth_percent="0.78"/>
    <TextView
        android:textSize="@dimen/sp_12"
        android:textColor="@color/colorRemainedBattery"
        android:id="@+id/tv_pwd_error_tips_1"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:text="@string/password_error_tips_2"
        android:drawableLeft="@mipmap/img_error_tips"
        android:drawablePadding="@dimen/dp_2"
        app:layout_constraintLeft_toLeftOf="@+id/et_old_pwd"
        app:layout_constraintRight_toRightOf="@+id/et_old_pwd"
        app:layout_constraintTop_toBottomOf="@+id/et_old_pwd"/>
    <EditText
        android:textSize="@dimen/sp_12"
        android:textColor="@color/color_modify_pwd_text"
        android:id="@+id/et_new_pwd"
        android:background="@drawable/line_et_bg"
        android:paddingBottom="@dimen/dp_5"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:hint="@string/me_hint_new_pwd"
        android:password="true"
        android:drawableRight="@mipmap/img_icon_pwd_lock"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.441"
        app:layout_constraintWidth_percent="0.78"/>
    <TextView
        android:textSize="@dimen/sp_12"
        android:textColor="@color/colorRemainedBattery"
        android:id="@+id/tv_pwd_error_tips_2"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:text="@string/password_error_tips_2"
        android:drawableLeft="@mipmap/img_error_tips"
        android:drawablePadding="@dimen/dp_2"
        app:layout_constraintLeft_toLeftOf="@+id/et_new_pwd"
        app:layout_constraintRight_toRightOf="@+id/et_new_pwd"
        app:layout_constraintTop_toBottomOf="@+id/et_new_pwd"/>
    <EditText
        android:textSize="@dimen/sp_12"
        android:textColor="@color/color_modify_pwd_text"
        android:id="@+id/et_confirm_new_pwd"
        android:background="@drawable/line_et_bg"
        android:paddingBottom="@dimen/dp_5"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:hint="@string/me_hint_confirm_new_pwd"
        android:password="true"
        android:drawableRight="@mipmap/img_icon_pwd_lock"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.552"
        app:layout_constraintWidth_percent="0.78"/>
    <TextView
        android:textSize="@dimen/sp_12"
        android:textColor="@color/colorRemainedBattery"
        android:id="@+id/tv_pwd_error_tips_3"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:text="@string/password_error_tips_2"
        android:drawableLeft="@mipmap/img_error_tips"
        android:drawablePadding="@dimen/dp_2"
        app:layout_constraintLeft_toLeftOf="@+id/et_confirm_new_pwd"
        app:layout_constraintRight_toRightOf="@+id/et_confirm_new_pwd"
        app:layout_constraintTop_toBottomOf="@+id/et_confirm_new_pwd"/>
    <Button
        android:textColor="@color/white"
        android:id="@+id/btn_confirm"
        android:background="@mipmap/img_btn_tell_us_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_16"
        android:text="@string/dialog_confirm"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.87"/>
</androidx.constraintlayout.widget.ConstraintLayout>
