<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_height"
        android:background="@mipmap/img_bg_dialog_media_info_white"
        android:paddingBottom="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/sp_13"
            android:textStyle="bold"
            android:textColor="@color/color_modify_pwd_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:text="@string/dialog_media_info_information"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_20">
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="@color/color_modify_pwd_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/dialog_media_info_date"
                android:layout_weight="1"/>
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="@color/color_modify_pwd_text"
                android:id="@+id/tv_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/dialog_media_info_date"
                android:layout_weight="1.2"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_resolution"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_20">
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="@color/color_modify_pwd_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/dialog_media_info_resolution"
                android:layout_weight="1"/>
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="@color/color_modify_pwd_text"
                android:id="@+id/tv_resolution"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/dialog_media_info_resolution"
                android:layout_weight="1.2"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_20">
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="@color/color_modify_pwd_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/dialog_media_info_size"
                android:layout_weight="1"/>
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="@color/color_modify_pwd_text"
                android:id="@+id/tv_size"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/dialog_media_info_size"
                android:layout_weight="1.2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_20">
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="@color/color_modify_pwd_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/dialog_media_info_format"
                android:layout_weight="1"/>
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="@color/color_modify_pwd_text"
                android:id="@+id/tv_format"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/dialog_media_info_format"
                android:layout_weight="1.2"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_20">
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="@color/color_modify_pwd_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/dialog_media_info_duration"
                android:layout_weight="1"/>
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="@color/color_modify_pwd_text"
                android:id="@+id/tv_duration"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/dialog_media_info_duration"
                android:layout_weight="1.2"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_frame_rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_20">
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="@color/color_modify_pwd_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/dialog_media_info_frame_rate"
                android:layout_weight="1"/>
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="@color/color_modify_pwd_text"
                android:id="@+id/tv_frame_rate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/dialog_media_info_frame_rate"
                android:layout_weight="1.2"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:textSize="@dimen/sp_18"
        android:textStyle="bold"
        android:textColor="@color/colorGradientBlueStart"
        android:gravity="center"
        android:id="@+id/tv_cancel"
        android:background="@mipmap/img_bg_dialog_media_info_bottom_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="@string/dialog_cancel"/>
</LinearLayout>
