<?xml version="1.0" encoding="utf-8"?>
<com.ipotensic.baselib.views.ShadowLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:id="@+id/toast"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:yc_cornerRadius="7dp"
    app:yc_shadowColor="@color/colorTranspercentText"
    app:yc_shadowLimit="3dp"
    app:yc_topShow="false">
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@drawable/bg_dialog_toast_shape"
        android:padding="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_toast_successful"/>
        <TextView
            android:textSize="12sp"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:id="@+id/tv_code_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="text"/>
        <TextView
            android:textSize="10sp"
            android:textColor="@color/colorText"
            android:gravity="center"
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="text"/>
    </LinearLayout>
</com.ipotensic.baselib.views.ShadowLayout>
