<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:id="@+id/cl_upgrade_dialog"
    android:background="@drawable/bg_dialog_upgrade"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="@dimen/sp_15"
        android:textStyle="bold"
        android:textColor="@color/color_portrait_dialog"
        android:gravity="center"
        android:id="@+id/tv_code_title"
        android:background="@drawable/bg_dialog_circular_white"
        android:paddingLeft="8dp"
        android:paddingTop="@dimen/dp_16"
        android:paddingRight="8dp"
        android:paddingBottom="@dimen/dp_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/download_fw_title"
        android:lineSpacingExtra="-5dp"/>
    <TextView
        android:textSize="@dimen/sp_15"
        android:textColor="@color/color_modify_pwd_text"
        android:gravity="center"
        android:id="@+id/tv_download"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_40"
        android:text="@string/downloading"
        android:lineSpacingExtra="-5dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20">
        <ProgressBar
            android:id="@+id/progress_bar"
            android:visibility="visible"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_12"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/progressbar_fw_upgrade_white"
            android:layout_centerInParent="true"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tv_progress"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.57"
            style="?android:attr/progressBarStyleHorizontal"/>
        <TextView
            android:textSize="@dimen/sp_15"
            android:textStyle="bold"
            android:textColor="@color/dialog_round_rect_bg"
            android:gravity="center"
            android:id="@+id/tv_progress"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:text="0%"
            app:layout_constraintBottom_toBottomOf="@+id/progress_bar"
            app:layout_constraintLeft_toRightOf="@+id/progress_bar"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/progress_bar"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:textSize="@dimen/sp_12"
        android:textColor="@color/color_modify_pwd_text"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_15"
        android:paddingTop="@dimen/dp_26"
        android:paddingRight="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_57"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/download_start_tips"/>
</LinearLayout>
