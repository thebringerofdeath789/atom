<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/view_big_package_fw_transfer_fail_0"
    android:background="@color/colorBlack"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textSize="@dimen/sp_20"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/tv_upgrade_fail_title"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:text="@string/fw_uploading"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.8"/>
    <TextView
        android:textSize="@dimen/sp_15"
        android:textStyle="bold"
        android:textColor="@color/color_dialog_blue_bg"
        android:id="@+id/tv_upgrade_fail_faqs"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_10"
        android:text="@string/upgrade_fails_button_upgrade_faqs"
        app:layout_constraintRight_toLeftOf="@+id/btn_upgrade_fail_close"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageButton
        android:id="@+id/btn_upgrade_fail_close"
        android:background="@null"
        android:padding="@dimen/dp_10"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_6"
        android:layout_marginRight="@dimen/dp_14"
        android:src="@mipmap/icon_btn_cancel_download"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/layout_fw_transfer_retry"
        android:background="@drawable/bg_big_package_tips"
        android:visibility="visible"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.46"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.38"
        app:layout_constraintWidth_percent="0.778">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:src="@mipmap/icon_big_package_retry"/>
        <TextView
            android:textSize="@dimen/sp_15"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/tv_upgrade_fail_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_20"
            android:text="@string/fw_upgrade_fail_tips"/>
        <TextView
            android:textSize="12sp"
            android:textColor="@color/dialog_text_gray"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/tv_error_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:text="@string/txt_error_code"/>
    </LinearLayout>
    <Button
        android:textSize="@dimen/sp_15"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/btn_transfer_exit"
        android:background="@mipmap/button_upgrade_exit"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_40"
        android:text="@string/fw_exit"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_fw_transfer_retry"/>
    <Button
        android:textSize="@dimen/sp_15"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/btn_upgrade_retry"
        android:background="@mipmap/button_upgrade_retry"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_40"
        android:text="@string/fw_retry"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btn_upgrade_exit"
        app:layout_constraintTop_toBottomOf="@+id/layout_fw_transfer_retry"/>
    <Button
        android:textSize="@dimen/sp_15"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/btn_upgrade_exit"
        android:background="@mipmap/button_upgrade_exit"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_40"
        android:text="@string/fw_exit"
        app:layout_constraintLeft_toRightOf="@+id/btn_upgrade_retry"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_fw_transfer_retry"/>
</androidx.constraintlayout.widget.ConstraintLayout>
