<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/view_head"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.ipotensic.potensicpro.view.TopTabView
        android:id="@+id/view_top_tab"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/view_head"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <ImageButton
        android:id="@+id/btn_select"
        android:background="@null"
        android:paddingLeft="@dimen/dp_30"
        android:paddingRight="@dimen/dp_30"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:src="@mipmap/icon_btn_main_media_select_normal"
        app:layout_constraintBottom_toBottomOf="@+id/view_head"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:textSize="@dimen/sp_14"
        android:textColor="@color/color_gray"
        android:gravity="center"
        android:id="@+id/tv_select"
        android:padding="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/main_media_select"
        app:layout_constraintBottom_toBottomOf="@+id/view_top_tab"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view_top_tab"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/layout_no_permission"
        android:background="@color/gray"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/view_head">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9">
            <TextView
                android:textSize="12sp"
                android:textColor="@color/black"
                android:id="@+id/tv_no_permission"
                android:paddingLeft="12dp"
                android:paddingTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/potensicpro_does_not_have_access_to_your_photos_tips"/>
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="@color/color_connected_state_blue"
                android:id="@+id/tv_go_setting"
                android:paddingLeft="12dp"
                android:paddingTop="5dp"
                android:paddingRight="12dp"
                android:paddingBottom="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dialog_location_confirm"/>
        </LinearLayout>
        <ImageButton
            android:layout_gravity="center"
            android:id="@+id/btn_close_no_permission"
            android:background="@null"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_no_permission_close"
            android:layout_weight="1"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:background="@color/gray"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.767"
        app:layout_constraintTop_toBottomOf="@+id/layout_no_permission"/>
    <RelativeLayout
        android:id="@+id/layout_bottom"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.113">
        <ImageButton
            android:id="@+id/btn_share"
            android:background="@null"
            android:padding="@dimen/dp_25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_btn_media_share_disable"
            android:layout_centerVertical="true"/>
        <ImageButton
            android:id="@+id/btn_delete"
            android:background="@null"
            android:padding="@dimen/dp_25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_btn_media_delete_disable"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/img_none"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/img_none_local_video"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"/>
</androidx.constraintlayout.widget.ConstraintLayout>
