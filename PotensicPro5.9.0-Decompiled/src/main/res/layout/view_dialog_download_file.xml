<?xml version="1.0" encoding="utf-8"?>
<com.ipotensic.baselib.views.ShadowLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:yc_cornerRadius="@dimen/dp_7"
    app:yc_shadowColor="@color/colorTranspercentText"
    app:yc_shadowLimit="@dimen/dp_6">
    <RelativeLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@drawable/bg_round_rectangle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/btn_cancel"
            android:background="@null"
            android:padding="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_btn_cancel_download"
            android:layout_alignTop="@+id/layout_download"
            android:layout_alignRight="@+id/layout_download"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/layout_download"
            android:paddingLeft="@dimen/dp_30"
            android:paddingTop="@dimen/dp_15"
            android:paddingRight="@dimen/dp_30"
            android:paddingBottom="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
            <ImageView
                android:id="@+id/iv_rotate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_dialog_download_file"/>
            <TextView
                android:textColor="@color/white"
                android:id="@+id/tv_progress"
                android:paddingTop="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/toast_download_progress"/>
            <com.ipotensic.kernel.view.NumberProgressBar
                android:id="@+id/progress_bar"
                android:padding="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:progress_current="0"
                app:progress_max="100"
                app:progress_reached_bar_height="@dimen/dp_6"
                app:progress_reached_color="@color/colorWhite"
                app:progress_text_color="@color/colorWhite"
                app:progress_text_size="@dimen/sp_14"
                app:progress_text_visibility="visible"
                app:progress_unreached_bar_height="@dimen/dp_4"
                app:progress_unreached_color="@color/color_white_fifty_percent"/>
        </LinearLayout>
    </RelativeLayout>
</com.ipotensic.baselib.views.ShadowLayout>
