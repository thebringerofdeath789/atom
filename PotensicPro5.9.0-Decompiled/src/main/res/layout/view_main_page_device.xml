<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_device"
    android:background="@mipmap/img_bg_main_device"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/guide_model_select"
        android:background="@color/colorTransparent"
        android:paddingTop="@dimen/dp_3"
        android:paddingBottom="3dp"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_menu"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_menu"/>
    <LinearLayout
        android:gravity="bottom"
        android:orientation="horizontal"
        android:id="@+id/ll_top"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_24"
        android:layout_marginLeft="@dimen/dp_23"
        android:layout_marginTop="@dimen/dp_57"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_24"
            android:src="@mipmap/img_logo"/>
        <TextView
            android:textSize="@dimen/sp_18"
            android:textColor="@color/white"
            android:id="@+id/tv_choose"
            android:paddingLeft="@dimen/dp_5"
            android:paddingRight="@dimen/dp_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dreamer"
            android:drawableRight="@mipmap/img_main_down_arrow"
            android:drawablePadding="@dimen/dp_2"
            android:paddingHorizontal="@dimen/dp_5"/>
    </LinearLayout>
    <ImageButton
        android:id="@+id/btn_menu"
        android:background="@null"
        android:padding="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/img_btn_main_menu"
        app:layout_constraintBottom_toBottomOf="@+id/ll_top"
        app:layout_constraintHorizontal_bias="0.97"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ll_top"/>
    <ImageView
        android:id="@+id/iv_device_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/img_bg_main_device_pro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/view_enter_bg"
        android:background="@color/white"
        android:visibility="invisible"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_72"
        app:layout_constraintBottom_toBottomOf="@+id/btn_enter_device"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_enter_device"
        app:layout_constraintWidth_percent="0.52"/>
    <TextView
        android:textSize="16sp"
        android:textStyle="italic|bold"
        android:textColor="@color/color_full_white"
        android:gravity="center"
        android:id="@+id/btn_enter_device"
        android:background="@drawable/bg_device_enter_no_select"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_52"
        android:layout_marginLeft="@dimen/dp_10"
        android:text="@string/enter_device"
        android:lines="1"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/view_enter_bg"
        app:layout_constraintRight_toRightOf="@+id/view_enter_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.814"/>
    <com.ipotensic.potensicpro.view.ConnectStateView
        android:textSize="@dimen/sp_10"
        android:gravity="center"
        android:id="@+id/tv_connect_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/plane_disconnecting"
        android:drawablePadding="2dp"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.86"/>
    <TextView
        android:textSize="@dimen/sp_12"
        android:textColor="@color/colorWhite"
        android:gravity="center_vertical"
        android:id="@+id/tv_check_upgrade"
        android:background="@mipmap/main_upgrade_check"
        android:paddingLeft="16dp"
        android:paddingTop="@dimen/dp_12"
        android:paddingRight="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_12"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:text="@string/upgrade_check"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_top"/>
    <View
        android:id="@+id/view_blank"
        android:background="@color/colorTransparent"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <include
        android:id="@+id/layout_menu"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        layout="@layout/view_main_menu"/>
</androidx.constraintlayout.widget.ConstraintLayout>
