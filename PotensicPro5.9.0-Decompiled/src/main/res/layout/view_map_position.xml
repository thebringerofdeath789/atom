<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_map_pos_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_map_btn_pos_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageButton
        android:id="@+id/iv_fly_home_position"
        android:background="@null"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_8"
        android:src="@mipmap/icon_map_home_location"
        app:layout_constraintBottom_toBottomOf="@+id/iv_map_pos_bg"
        app:layout_constraintLeft_toLeftOf="@+id/iv_map_pos_bg"
        app:layout_constraintRight_toLeftOf="@+id/iv_my_position"
        app:layout_constraintTop_toTopOf="@+id/iv_map_pos_bg"/>
    <ImageButton
        android:id="@+id/iv_my_position"
        android:background="@null"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_8"
        android:src="@mipmap/icon_map_fly_center"
        app:layout_constraintBottom_toBottomOf="@+id/iv_map_pos_bg"
        app:layout_constraintLeft_toRightOf="@+id/iv_fly_home_position"
        app:layout_constraintRight_toLeftOf="@+id/iv_fly_position"
        app:layout_constraintTop_toTopOf="@+id/iv_map_pos_bg"/>
    <ImageButton
        android:id="@+id/iv_fly_position"
        android:background="@null"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_8"
        android:src="@mipmap/icon_map_fly_trajectory"
        app:layout_constraintBottom_toBottomOf="@+id/iv_map_pos_bg"
        app:layout_constraintLeft_toRightOf="@+id/iv_my_position"
        app:layout_constraintRight_toRightOf="@+id/iv_map_pos_bg"
        app:layout_constraintTop_toTopOf="@+id/iv_map_pos_bg"/>
</androidx.constraintlayout.widget.ConstraintLayout>
