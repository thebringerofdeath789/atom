<?xml version="1.0" encoding="utf-8"?>
<com.ipotensic.baselib.views.ShadowLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:yc_cornerRadius="@dimen/dp_14"
    app:yc_shadowColor="@color/colorTranspercentText"
    app:yc_shadowLimit="@dimen/dp_6">
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@drawable/bg_dialog_no_upgrade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/sp_15"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:id="@+id/tv_code_title"
            android:background="@drawable/bg_dialog_repair_top"
            android:paddingLeft="8dp"
            android:paddingTop="@dimen/dp_16"
            android:paddingRight="8dp"
            android:paddingBottom="@dimen/dp_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="固件升级未完成！"
            android:lineSpacingExtra="-5dp"/>
        <ScrollView
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="@color/colorWhite"
                android:layout_gravity="center"
                android:id="@+id/tv_content"
                android:padding="@dimen/dp_18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="固件不匹配可能影响飞行安全。"/>
        </ScrollView>
        <Button
            android:textSize="@dimen/sp_14"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:id="@+id/btn_ok"
            android:background="@drawable/bg_dialog_repair_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:text="@string/sys_to_upgrade"/>
    </LinearLayout>
</com.ipotensic.baselib.views.ShadowLayout>
