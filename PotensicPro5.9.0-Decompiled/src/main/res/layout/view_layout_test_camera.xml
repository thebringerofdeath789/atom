<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_camera_test"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textSize="12sp"
        android:textColor="@color/white"
        android:id="@+id/tv_preview_size"
        android:background="@color/color_50_gray"
        android:padding="10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="宽："
        app:layout_constraintRight_toLeftOf="@+id/scroll_view"
        app:layout_constraintTop_toTopOf="@+id/scroll_view"
        app:layout_constraintWidth_percent="0.12"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@+id/layout_down"
        app:layout_constraintLeft_toLeftOf="@+id/tv_preview_size">
        <TextView
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/btn_send1"
            android:background="@color/color_dialog_blue_bg"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:text="发送"/>
        <EditText
            android:textSize="10sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:id="@+id/et_fun1"
            android:background="@drawable/bg_white_corners_strock"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:maxLength="2"
            android:digits="0123456789abcdef"
            android:inputType="text"
            android:imeOptions="flagNoExtractUi|flagNoFullscreen|actionDone"/>
        <EditText
            android:textSize="10sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:id="@+id/et_params1"
            android:background="@drawable/bg_white_corners_strock"
            android:layout_width="400dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:inputType="text"
            android:imeOptions="flagNoExtractUi|flagNoFullscreen|actionDone"/>
        <TextView
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/btn_clear1"
            android:background="@color/color_dialog_blue_bg"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:text="清空"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/layout_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@+id/scroll_view"
        app:layout_constraintLeft_toLeftOf="@+id/tv_preview_size">
        <TextView
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/btn_send2"
            android:background="@color/color_dialog_blue_bg"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:text="发送"/>
        <EditText
            android:textSize="10sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:id="@+id/et_fun2"
            android:background="@drawable/bg_white_corners_strock"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:digits="0123456789abcdef"
            android:inputType="text"
            android:imeOptions="flagNoExtractUi|flagNoFullscreen|actionDone"/>
        <EditText
            android:textSize="10sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:id="@+id/et_params2"
            android:background="@drawable/bg_white_corners_strock"
            android:layout_width="400dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:inputType="text"
            android:imeOptions="flagNoExtractUi|flagNoFullscreen|actionDone"/>
        <TextView
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/btn_clear2"
            android:background="@color/color_dialog_blue_bg"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:text="清空"/>
    </LinearLayout>
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8"
        app:layout_constraintWidth_percent="0.6">
        <TextView
            android:textSize="12sp"
            android:textColor="@color/white"
            android:id="@+id/tv_msg"
            android:background="@color/color_50_gray"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
