<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageButton
        android:id="@+id/btn_back"
        android:background="@null"
        android:padding="@dimen/dp_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:src="@mipmap/img_arrow_left_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.048"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="#f7f7f7"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_back">
        <TextView
            android:textSize="@dimen/sp_20"
            android:textColor="#333333"
            android:id="@+id/tv_next_step"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/connect_select"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.066"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_connect_method"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_45"
            android:layout_marginRight="@dimen/dp_20"
            app:cardElevation="@dimen/dp_5"
            app:layout_constraintTop_toBottomOf="@+id/tv_next_step">
            <TextView
                android:textSize="@dimen/sp_16"
                android:textColor="@color/color_connect_selected_text"
                android:gravity="center"
                android:id="@+id/tv_connect_method"
                android:background="?android:attr/selectableItemBackground"
                android:paddingLeft="@dimen/dp_30"
                android:paddingTop="@dimen/dp_20"
                android:paddingRight="@dimen/dp_40"
                android:paddingBottom="@dimen/dp_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/connect_method"
                android:drawableLeft="@mipmap/img_device_connect"
                android:drawableRight="@mipmap/img_icon_right_gray"
                android:drawablePadding="@dimen/dp_10"
                android:textAllCaps="false"
                style="@style/Widget.AppCompat.Button"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_enter_flight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_20"
            app:cardElevation="@dimen/dp_5"
            app:layout_constraintTop_toBottomOf="@+id/cv_connect_method">
            <TextView
                android:textSize="@dimen/sp_16"
                android:textColor="@color/color_connect_selected_text"
                android:gravity="center"
                android:id="@+id/tv_enter_flight"
                android:background="?android:attr/selectableItemBackground"
                android:paddingLeft="@dimen/dp_30"
                android:paddingTop="@dimen/dp_20"
                android:paddingRight="@dimen/dp_40"
                android:paddingBottom="@dimen/dp_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/connect_enter_flight"
                android:drawableLeft="@mipmap/img_enter_main_interface"
                android:drawableRight="@mipmap/img_icon_right_gray"
                android:drawablePadding="@dimen/dp_10"
                android:textAllCaps="false"
                style="@style/Widget.AppCompat.Button"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_connect_text_tips"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            android:text="@string/connect_tips"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cv_enter_flight"
            app:layout_constraintWidth_percent="0.9"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
