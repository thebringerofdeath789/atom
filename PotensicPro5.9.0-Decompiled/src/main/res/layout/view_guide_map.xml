<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:background="@mipmap/icon_guide_map_bg"
    android:paddingLeft="@dimen/dp_15"
    android:paddingTop="@dimen/dp_10"
    android:paddingRight="@dimen/dp_15"
    android:paddingBottom="@dimen/dp_10"
    android:layout_width="300dp"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_location"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@mipmap/icon_guide_control_location"
        app:layout_constraintBottom_toTopOf="@+id/iv_direction"
        app:layout_constraintLeft_toLeftOf="@+id/iv_direction"
        app:layout_constraintRight_toRightOf="@+id/iv_direction"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="@dimen/sp_11"
        android:textColor="@color/colorWhite"
        android:id="@+id/tv_location"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:text="@string/guide_map_remote_location"
        app:layout_constraintBottom_toBottomOf="@+id/iv_location"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_location"
        app:layout_constraintTop_toTopOf="@+id/iv_location"/>
    <ImageView
        android:id="@+id/iv_direction"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@mipmap/icon_guide_nose_direction"
        app:layout_constraintBottom_toTopOf="@+id/iv_home"
        app:layout_constraintLeft_toLeftOf="@+id/iv_bg"
        app:layout_constraintTop_toBottomOf="@+id/iv_location"/>
    <TextView
        android:textSize="@dimen/sp_11"
        android:textColor="@color/colorWhite"
        android:id="@+id/tv_direction"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:text="@string/guide_map_plane_direction"
        app:layout_constraintBottom_toBottomOf="@+id/iv_direction"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_location"
        app:layout_constraintTop_toTopOf="@+id/iv_direction"/>
    <ImageView
        android:id="@+id/iv_home"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@mipmap/mapbox_marker_icon_home_position"
        app:layout_constraintBottom_toTopOf="@+id/iv_remote_location"
        app:layout_constraintLeft_toLeftOf="@+id/iv_direction"
        app:layout_constraintRight_toRightOf="@+id/iv_direction"
        app:layout_constraintTop_toBottomOf="@+id/iv_direction"/>
    <TextView
        android:textSize="@dimen/sp_11"
        android:textColor="@color/colorWhite"
        android:id="@+id/tv_home"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:text="@string/guide_map_home_location"
        app:layout_constraintBottom_toBottomOf="@+id/iv_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_direction"
        app:layout_constraintTop_toTopOf="@+id/iv_home"/>
    <ImageView
        android:id="@+id/iv_remote_location"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@mipmap/icon_guide_location"
        app:layout_constraintBottom_toTopOf="@+id/iv_map_type"
        app:layout_constraintLeft_toLeftOf="@+id/iv_direction"
        app:layout_constraintRight_toRightOf="@+id/iv_direction"
        app:layout_constraintTop_toBottomOf="@+id/iv_home"/>
    <TextView
        android:textSize="@dimen/sp_11"
        android:textColor="@color/colorWhite"
        android:id="@+id/tv_remote_location"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:text="@string/guide_map_location"
        app:layout_constraintBottom_toBottomOf="@+id/iv_remote_location"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_location"
        app:layout_constraintTop_toTopOf="@+id/iv_remote_location"/>
    <ImageView
        android:id="@+id/iv_map_type"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@mipmap/icon_guide_map_type"
        app:layout_constraintBottom_toTopOf="@+id/iv_compass"
        app:layout_constraintLeft_toLeftOf="@+id/iv_direction"
        app:layout_constraintRight_toRightOf="@+id/iv_direction"
        app:layout_constraintTop_toBottomOf="@+id/iv_remote_location"/>
    <TextView
        android:textSize="@dimen/sp_11"
        android:textColor="@color/colorWhite"
        android:id="@+id/tv_map_type"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:text="@string/guide_map_type"
        app:layout_constraintBottom_toBottomOf="@+id/iv_map_type"
        app:layout_constraintStart_toStartOf="@+id/tv_remote_location"
        app:layout_constraintTop_toTopOf="@+id/iv_map_type"/>
    <ImageView
        android:id="@+id/iv_compass"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@mipmap/icon_guide_compass"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/iv_direction"
        app:layout_constraintRight_toRightOf="@+id/iv_direction"
        app:layout_constraintTop_toBottomOf="@+id/iv_map_type"/>
    <TextView
        android:textSize="@dimen/sp_11"
        android:textColor="@color/colorWhite"
        android:id="@+id/tv_compass"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:text="@string/guide_map_compass"
        app:layout_constraintBottom_toBottomOf="@+id/iv_compass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_map_type"
        app:layout_constraintTop_toTopOf="@+id/iv_compass"/>
</androidx.constraintlayout.widget.ConstraintLayout>
