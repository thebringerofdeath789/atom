<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/toolbar"
        layout="@layout/view_toolbar"/>
    <View
        android:id="@+id/line"
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/ll_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line">
        <TextView
            android:textSize="@dimen/sp_10"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:text="@string/main_flight_duration"
            android:drawableTop="@mipmap/img_flight_record_duration"
            android:drawablePadding="@dimen/dp_5"
            android:layout_weight="1"/>
        <TextView
            android:textSize="@dimen/sp_10"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:text="@string/main_flight_distance"
            android:drawableTop="@mipmap/img_flight_record_distance"
            android:drawablePadding="@dimen/dp_5"
            android:layout_weight="1"/>
        <TextView
            android:textSize="@dimen/sp_10"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:text="@string/main_flight_max_speed"
            android:drawableTop="@mipmap/img_flight_record_speed"
            android:drawablePadding="@dimen/dp_5"
            android:layout_weight="1"/>
        <TextView
            android:textSize="@dimen/sp_10"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:text="@string/main_flight_highest"
            android:drawableTop="@mipmap/img_flight_record_duration_highest"
            android:drawablePadding="@dimen/dp_5"
            android:layout_weight="1"/>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        app:cardBackgroundColor="@color/gray"
        app:cardElevation="@dimen/dp_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_img">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_view"
                android:background="@color/gray"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <ImageView
                android:id="@+id/iv_empty"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/img_btn_main_menu_aircraft_log_bg"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.298"/>
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="@color/colorText"
                android:id="@+id/tv_empty"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="@string/main_no_record"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_empty"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
