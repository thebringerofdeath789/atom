<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_test_main"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/layout_test"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="10sp"
                android:textColor="@color/white"
                android:id="@+id/tv_channel"
                android:background="@color/color_dialog_blue_bg_transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="信道:"/>
            <TextView
                android:textSize="10sp"
                android:textColor="@color/white"
                android:id="@+id/wifi_signal"
                android:background="@color/color_dialog_blue_bg_transparent"
                android:padding="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="WIFI信号强度:"/>
            <TextView
                android:textSize="10sp"
                android:textColor="@color/white"
                android:id="@+id/vertical_accuracy"
                android:background="@color/color_dialog_blue_bg_transparent"
                android:padding="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="垂直精度:"/>
            <TextView
                android:textSize="10sp"
                android:textColor="@color/white"
                android:id="@+id/horizontal_accuracy"
                android:background="@color/color_dialog_blue_bg_transparent"
                android:padding="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="水平精度:"/>
            <TextView
                android:textSize="10sp"
                android:textColor="@color/white"
                android:id="@+id/position_accuracy"
                android:background="@color/color_dialog_blue_bg_transparent"
                android:padding="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="位置精度:"/>
            <TextView
                android:textSize="10sp"
                android:textColor="@color/white"
                android:id="@+id/speed_accuracy"
                android:background="@color/color_dialog_blue_bg_transparent"
                android:padding="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="速度精度:"/>
            <TextView
                android:textSize="10sp"
                android:textColor="@color/white"
                android:id="@+id/speed_vertical"
                android:background="@color/color_dialog_blue_bg_transparent"
                android:padding="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="GPS垂直速度:"/>
            <TextView
                android:textSize="10sp"
                android:textColor="@color/white"
                android:id="@+id/remote_rev_num"
                android:background="@color/color_dialog_blue_bg_transparent"
                android:padding="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="飞机接收包数:"/>
            <TextView
                android:textSize="10sp"
                android:textColor="@color/white"
                android:id="@+id/flight_ctrl_rev_num"
                android:background="@color/color_dialog_blue_bg_transparent"
                android:padding="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="遥控接收包数:"/>
            <TextView
                android:textSize="10sp"
                android:textColor="@color/white"
                android:id="@+id/flight_ctrl_state"
                android:background="@color/color_connect_green_transparent"
                android:padding="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="飞控连接状态:"/>
            <TextView
                android:textSize="10sp"
                android:textColor="@color/white"
                android:id="@+id/mcu_state"
                android:background="@color/color_connect_green_transparent"
                android:padding="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="遥控MCU连接状态:"/>
            <TextView
                android:textSize="10sp"
                android:textColor="@color/white"
                android:id="@+id/camera_ctrl_state"
                android:background="@color/color_connect_green_transparent"
                android:padding="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="相机连接状态:"/>
            <TextView
                android:textSize="10sp"
                android:textColor="@color/white"
                android:id="@+id/fpv_state"
                android:background="@color/color_connect_green_transparent"
                android:padding="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="FPV连接状态:"/>
            <TextView
                android:textSize="10sp"
                android:textColor="@color/white"
                android:id="@+id/dbm_state"
                android:background="@color/color_connect_green_transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="发射功率:"/>
        </LinearLayout>
    </ScrollView>
    <ScrollView
        android:id="@+id/scroll_view_gimbal"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:id="@+id/ll_voltage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:textSize="10sp"
                android:textColor="@color/white"
                android:id="@+id/btn_gps_mode_open"
                android:background="@color/colorGray"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="GPS模式"/>
            <Button
                android:textSize="10sp"
                android:textColor="@color/white"
                android:id="@+id/btn_flow_mode_open"
                android:background="@color/colorGray"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="2dp"
                android:text="光流模式"/>
            <TextView
                android:textSize="10sp"
                android:textColor="@color/colorBlack"
                android:id="@+id/tv_wifi_signal_value"
                android:background="@color/white"
                android:paddingBottom="5dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WIFI强度:"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.3"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.3"/>
            <TextView
                android:textSize="10sp"
                android:textColor="@color/colorBlack"
                android:id="@+id/tv_frame_rate"
                android:background="@color/white"
                android:paddingBottom="5dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="码率:"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.3"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.4"/>
            <Button
                android:textSize="10sp"
                android:textColor="@color/colorWhite"
                android:layout_gravity="center"
                android:id="@+id/btn_ptz_calibration"
                android:background="@color/colorGray"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="@dimen/dp_3"
                android:foreground="?android:attr/selectableItemBackground"
                android:text="云台校准"/>
            <TextView
                android:textSize="10sp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:id="@+id/tv_pitch"
                android:background="@color/color_login_blue_transparent"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:text="俯仰角:"/>
            <TextView
                android:textSize="10sp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:id="@+id/tv_roll"
                android:background="@color/color_login_blue_transparent"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:text="翻滚角:"/>
            <TextView
                android:textSize="10sp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:id="@+id/tv_compass"
                android:background="@color/color_login_blue_transparent"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:text="地磁:"/>
            <LinearLayout
                android:textSize="10sp"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:background="@color/color_login_blue_transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_3">
                <TextView
                    android:textSize="10sp"
                    android:textColor="@color/colorWhite"
                    android:layout_gravity="center"
                    android:id="@+id/tv_angle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="飞机的方向角：NA"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:background="@color/color_login_blue_transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="10sp"
                    android:textColor="@color/colorWhite"
                    android:gravity="center_vertical"
                    android:id="@+id/tv_voltage_1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="电压1:"
                    android:layout_weight="1"/>
                <TextView
                    android:textSize="10sp"
                    android:textColor="@color/colorWhite"
                    android:gravity="center_vertical"
                    android:id="@+id/tv_voltage_2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="电压2:"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:background="@color/color_login_blue_transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="10sp"
                    android:textColor="@color/colorWhite"
                    android:gravity="center_vertical"
                    android:id="@+id/tv_voltage_3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="电压3:"/>
                <TextView
                    android:textSize="10sp"
                    android:textColor="@color/colorWhite"
                    android:gravity="center_vertical"
                    android:id="@+id/tv_voltage_4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="电压4:"/>
            </LinearLayout>
            <TextView
                android:textSize="10sp"
                android:textColor="@color/colorWhite"
                android:id="@+id/tv_six_calibration"
                android:background="@color/color_dialog_blue_bg_transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="六面校准失败"/>
            <TextView
                android:textSize="10sp"
                android:textColor="@color/white"
                android:id="@+id/tv_return_altitude"
                android:background="@color/color_dialog_blue_bg_transparent"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="返航高度设置为10M关闭"/>
            <Button
                android:textSize="10sp"
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:id="@+id/btn_no_condition_unlock"
                android:background="@color/colorGray"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="2dp"
                android:text="无条件解锁+屏蔽地磁校准"/>
            <TextView
                android:textSize="10sp"
                android:textColor="@color/white"
                android:id="@+id/tv_geo_level"
                android:background="@color/color_connect_green"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="地磁强度:"/>
            <TextView
                android:textSize="10sp"
                android:textColor="@color/white"
                android:id="@+id/tof_height"
                android:background="@color/color_connect_green"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="TOF高度:"/>
            <TextView
                android:textSize="10sp"
                android:textColor="@color/white"
                android:id="@+id/tof_precision"
                android:background="@color/color_connect_green"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="TOF精度:"/>
            <TextView
                android:textSize="10sp"
                android:textColor="@color/white"
                android:id="@+id/tof_temperature"
                android:background="@color/color_connect_green"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="TOF温度:"/>
            <TextView
                android:textSize="10sp"
                android:textColor="@color/white"
                android:id="@+id/imu_temperature"
                android:background="@color/color_connect_green"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="IMU温度:"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="3dp">
                <TextView
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:id="@+id/tv_start_save"
                    android:background="@color/color_connect_green"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="开始保存"/>
                <TextView
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:id="@+id/tv_stop_save"
                    android:background="@color/colorGray"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="3dp"
                    android:text="停止保存"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="3dp">
                <TextView
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:id="@+id/tv_wind_speed"
                    android:background="@color/color_connect_green"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="风速："/>
                <TextView
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:id="@+id/tv_wind_direction"
                    android:background="@color/color_connect_green"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="3dp"
                    android:text="风向："/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/btn_atti_takeoff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="姿态模式起飞"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/scroll_view_gimbal"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
