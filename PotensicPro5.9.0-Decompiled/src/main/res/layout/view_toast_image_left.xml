<?xml version="1.0" encoding="utf-8"?>
<com.ipotensic.baselib.views.ShadowLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toast"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:yc_cornerRadius="7dp"
    app:yc_shadowColor="@color/colorTranspercentText"
    app:yc_shadowLimit="1dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/bg_dialog_toast_shape"
        android:paddingLeft="10dp"
        android:paddingTop="12dp"
        android:paddingRight="16dp"
        android:paddingBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_no_sdcard"
            android:scaleType="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textSize="15sp"
            android:textColor="@color/colorWhite"
            android:id="@+id/tv_code_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:text="text"
            app:layout_constraintLeft_toRightOf="@+id/img_icon"
            app:layout_constraintTop_toTopOf="@+id/img_icon"/>
        <TextView
            android:textSize="12sp"
            android:textColor="@color/colorText"
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="text"
            app:layout_constraintLeft_toLeftOf="@+id/tv_code_title"
            app:layout_constraintTop_toBottomOf="@+id/tv_code_title"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.ipotensic.baselib.views.ShadowLayout>
