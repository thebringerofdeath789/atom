<?xml version="1.0" encoding="utf-8"?>
<com.ipotensic.baselib.views.ShadowLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:yc_shadowColor="#4dffffff"
    app:yc_shadowLimit="@dimen/dp_8">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/bg_dialog_hexahedral_calibration"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textSize="@dimen/sp_15"
            android:textColor="@color/colorWhite"
            android:id="@+id/tv_code_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/sys_hexahedral_calibration"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <ScrollView
            android:scrollbars="none"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_10"
            app:layout_constraintBottom_toTopOf="@+id/ll_step"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_code_title">
            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/sp_10"
                    android:textColor="@color/colorWhite"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sys_hexahedral_calibration_explain"/>
                <RelativeLayout
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/iv_calibration_bg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:src="@mipmap/icon_hexahedral_calibration"/>
                    <TextView
                        android:textSize="@dimen/sp_10"
                        android:textColor="@color/dialog_text_gray"
                        android:id="@+id/tv_describe"
                        android:visibility="invisible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_8"
                        android:layout_marginBottom="@dimen/dp_6"
                        android:text="@string/sys_hexahedral_calibration_level"
                        android:layout_alignRight="@+id/iv_calibration_bg"
                        android:layout_alignBottom="@+id/iv_calibration_bg"/>
                </RelativeLayout>
                <TextView
                    android:textSize="@dimen/sp_11"
                    android:textColor="@color/colorWhite"
                    android:gravity="center_horizontal"
                    android:id="@+id/tv_calibration_tips"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="@string/sys_hexahedral_calibration_step"/>
            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/ll_step"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_5"
            app:layout_constraintBottom_toTopOf="@+id/ll_bottom"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
            <TextView
                android:textSize="@dimen/sp_11"
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:id="@+id/tv_level"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/sys_hexahedral_calibration_level"
                android:layout_weight="1"/>
            <TextView
                android:textSize="@dimen/sp_11"
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:id="@+id/tv_back"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/sys_hexahedral_calibration_back"
                android:layout_weight="1"/>
            <TextView
                android:textSize="@dimen/sp_11"
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:id="@+id/tv_left"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/sys_hexahedral_calibration_left"
                android:layout_weight="1"/>
            <TextView
                android:textSize="@dimen/sp_11"
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:id="@+id/tv_right"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/sys_hexahedral_calibration_right"
                android:layout_weight="1"/>
            <TextView
                android:textSize="@dimen/sp_11"
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:id="@+id/tv_down"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/sys_hexahedral_calibration_nose_down"
                android:layout_weight="1"/>
            <TextView
                android:textSize="@dimen/sp_11"
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:id="@+id/tv_up"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/sys_hexahedral_calibration_nose_up"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/ll_bottom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
            <ImageView
                android:id="@+id/iv_level"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/bg_hexahedral_calibration_indicator"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/bg_hexahedral_calibration_indicator"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/iv_left"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/bg_hexahedral_calibration_indicator"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/iv_right"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/bg_hexahedral_calibration_indicator"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/iv_down"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/bg_hexahedral_calibration_indicator"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/iv_up"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/bg_hexahedral_calibration_indicator"
                android:layout_weight="1"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.ipotensic.baselib.views.ShadowLayout>
