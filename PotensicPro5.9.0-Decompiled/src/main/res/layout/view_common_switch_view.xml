<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bg_setting_calibration_2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_title"
        android:layout_marginTop="@dimen/dp_16"
        android:text="@string/sys_basic_beginner_mode"
        android:layout_marginStart="@dimen/dp_15"
        style="@style/font_white_15"/>
    <com.ipotensic.kernel.view.SwitchButton
        android:id="@+id/switch_btn"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_marginBottom="@dimen/dp_12"
        android:layout_alignParentEnd="true"/>
    <TextView
        android:id="@+id/tv_content"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_below="@+id/tv_title"
        android:layout_marginEnd="@dimen/dp_70"
        android:layout_alignStart="@+id/tv_title"
        style="@style/font_gray_13"/>
</RelativeLayout>
