<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textSize="@dimen/sp_16"
        android:textColor="@color/white"
        android:id="@+id/tv_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register"
        android:drawableRight="@mipmap/img_arrow_right"
        android:drawablePadding="@dimen/dp_6"
        android:textAllCaps="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.96"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.066"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:textSize="@dimen/sp_40"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:id="@+id/tv_code_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login2"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.096"/>
        <TextView
            android:textColor="@color/color_login_blue"
            android:id="@+id/tv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome_to_login"
            android:drawableTop="@mipmap/img_logo_login"
            android:drawablePadding="@dimen/dp_5"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.24"/>
        <EditText
            android:textSize="@dimen/sp_14"
            android:textColorHint="@color/colorText"
            android:gravity="start"
            android:id="@+id/edit_login_username"
            android:background="@drawable/line_et_bg"
            android:paddingLeft="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_5"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_97"
            android:hint="@string/email_address"
            android:singleLine="true"
            android:inputType="none"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_logo"
            app:layout_constraintWidth_percent="0.752"/>
        <TextView
            android:textSize="@dimen/sp_11"
            android:textColor="@color/colorRemainedBattery"
            android:id="@+id/tv_email_error_tips"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:text="@string/email_error_tips"
            android:drawableLeft="@mipmap/img_error_tips"
            android:drawablePadding="@dimen/dp_2"
            android:lineSpacingExtra="-2dp"
            app:layout_constraintLeft_toLeftOf="@+id/edit_login_username"
            app:layout_constraintRight_toRightOf="@+id/edit_login_username"
            app:layout_constraintTop_toBottomOf="@+id/edit_login_username"/>
        <EditText
            android:textSize="@dimen/sp_14"
            android:textColorHint="@color/colorText"
            android:id="@+id/edit_login_password"
            android:background="@drawable/line_et_bg"
            android:paddingLeft="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_5"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_50"
            android:hint="@string/password"
            android:password="true"
            android:singleLine="true"
            android:inputType="text"
            android:imeOptions="actionDone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_login_username"
            app:layout_constraintWidth_percent="0.752"/>
        <TextView
            android:textSize="@dimen/sp_11"
            android:textColor="@color/colorRemainedBattery"
            android:id="@+id/tv_password_error_tips"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:text="@string/password_error_tips_2"
            android:drawableLeft="@mipmap/img_error_tips"
            android:drawablePadding="@dimen/dp_2"
            android:lineSpacingExtra="-2dp"
            app:layout_constraintLeft_toLeftOf="@+id/edit_login_password"
            app:layout_constraintRight_toRightOf="@+id/edit_login_password"
            app:layout_constraintTop_toBottomOf="@+id/edit_login_password"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.9">
        <Button
            android:textSize="@dimen/sp_16"
            android:textColor="@color/white"
            android:id="@+id/btn_login"
            android:background="@mipmap/img_btn_login_commit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login2"
            android:textAllCaps="false"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_login_blue"
            android:id="@+id/tv_forget_password"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/forget_password"
            app:layout_constraintRight_toRightOf="@+id/btn_login"
            app:layout_constraintTop_toBottomOf="@+id/btn_login"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
