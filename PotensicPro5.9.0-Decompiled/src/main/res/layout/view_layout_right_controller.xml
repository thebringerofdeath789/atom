<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:paddingLeft="@dimen/dp_2"
    android:paddingTop="@dimen/dp_50"
    android:paddingRight="@dimen/dp_2"
    android:paddingBottom="@dimen/dp_45"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_camera_set"
        android:padding="@dimen/dp_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_camera_set"
        app:layout_constraintLeft_toLeftOf="@+id/iv_capture"
        app:layout_constraintRight_toRightOf="@+id/iv_capture"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/iv_switch_status"
        android:padding="@dimen/dp_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/img_btn_switch_capture_video"
        app:layout_constraintBottom_toTopOf="@+id/iv_capture"
        app:layout_constraintLeft_toLeftOf="@+id/iv_capture"
        app:layout_constraintRight_toRightOf="@+id/iv_capture"
        app:layout_constraintTop_toBottomOf="@+id/iv_camera_set"/>
    <ImageView
        android:id="@+id/iv_capture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/img_take_photo"
        android:layout_centerInParent="true"
        app:layout_constraintBottom_toTopOf="@+id/iv_gallery"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_switch_status"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ll_record"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_2"
        app:layout_constraintLeft_toLeftOf="@+id/iv_capture"
        app:layout_constraintRight_toRightOf="@+id/iv_capture"
        app:layout_constraintTop_toBottomOf="@+id/iv_capture">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/iv_record_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_record_time_tip"/>
        <TextView
            android:textSize="@dimen/sp_10"
            android:textColor="@color/white"
            android:id="@+id/tv_record_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_3"
            android:text="00:00"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_gallery"
        android:padding="@dimen/dp_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/img_btn_gallery"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/iv_capture"
        app:layout_constraintRight_toRightOf="@+id/iv_capture"/>
</androidx.constraintlayout.widget.ConstraintLayout>
