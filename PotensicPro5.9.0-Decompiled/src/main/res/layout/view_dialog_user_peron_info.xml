<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/bg_solid_corner_white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        android:textColor="@color/color_portrait_dialog"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/tv_dialog_title"
        android:paddingTop="@dimen/dp_23"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dialog_user_person_info_title"/>
    <TextView
        android:textSize="@dimen/sp_13"
        android:textColor="@color/color_portrait_dialog"
        android:gravity="center"
        android:id="@+id/tv_dialog_message"
        android:paddingLeft="@dimen/dp_15"
        android:paddingTop="@dimen/dp_12"
        android:paddingBottom="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dialog_user_person_info_message"
        android:singleLine="false"
        android:paddingEnd="@dimen/dp_15"/>
    <View
        android:id="@+id/view_line"
        android:background="@color/color_line_dialog"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <Button
        android:textSize="@dimen/sp_14"
        android:textColor="#4c84ff"
        android:gravity="center"
        android:id="@+id/btn_confirm"
        android:background="@null"
        android:paddingTop="@dimen/dp_12"
        android:paddingBottom="@dimen/dp_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dialog_ok"/>
</LinearLayout>
