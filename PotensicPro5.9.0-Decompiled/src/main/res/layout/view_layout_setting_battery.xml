<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/view_layout_setting_battery_0"
    android:visibility="visible"
    android:layout_width="match_parent"
    android:layout_height="130dp">
    <com.ipotensic.kernel.view.BatteryCircleProgressView
        android:id="@+id/battery_progress_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/dp_15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintEnd_toEndOf="@+id/line4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/line4"
        android:background="@color/colorThirtyPercent"
        android:layout_width="@dimen/dp_1"
        android:layout_height="@dimen/dp_60"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.38"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/tvTemperatureTips"
        android:text="@string/sys_battery_temperature"
        app:layout_constraintBottom_toTopOf="@+id/tvCurrent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/font_white_13"/>
    <TextView
        android:id="@+id/tvCurrent"
        android:text="@string/sys_battery_current"
        app:layout_constraintBottom_toTopOf="@+id/tvVoltageTips"
        app:layout_constraintLeft_toLeftOf="@+id/tvTemperatureTips"
        app:layout_constraintTop_toBottomOf="@+id/tvTemperatureTips"
        style="@style/font_white_13"/>
    <TextView
        android:id="@+id/tvVoltageTips"
        android:text="@string/sys_battery_voltage"
        app:layout_constraintBottom_toTopOf="@+id/tvCycleTimeTips"
        app:layout_constraintLeft_toLeftOf="@+id/tvTemperatureTips"
        app:layout_constraintTop_toBottomOf="@+id/tvCurrent"
        style="@style/font_white_13"/>
    <TextView
        android:id="@+id/tvCycleTimeTips"
        android:text="@string/sys_battery_cycle_times"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/tvTemperatureTips"
        app:layout_constraintTop_toBottomOf="@+id/tvVoltageTips"
        style="@style/font_white_13"/>
    <TextView
        android:id="@+id/tv_temp_value"
        android:tag="binding_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvTemperatureTips"
        style="@style/font_white_13"/>
    <TextView
        android:id="@+id/tv_current_value"
        android:tag="binding_2"
        app:layout_constraintLeft_toLeftOf="@+id/tv_temp_value"
        app:layout_constraintTop_toTopOf="@+id/tvCurrent"
        style="@style/font_white_13"/>
    <TextView
        android:id="@+id/tvVoltage"
        android:tag="binding_3"
        app:layout_constraintLeft_toLeftOf="@+id/tv_temp_value"
        app:layout_constraintTop_toTopOf="@+id/tvVoltageTips"
        style="@style/font_white_13"/>
    <TextView
        android:tag="binding_4"
        app:layout_constraintStart_toStartOf="@+id/tv_temp_value"
        app:layout_constraintTop_toTopOf="@+id/tvCycleTimeTips"
        style="@style/font_white_13"/>
</androidx.constraintlayout.widget.ConstraintLayout>
