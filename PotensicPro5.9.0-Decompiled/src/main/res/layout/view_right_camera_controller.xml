<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/view_blank"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/view_camera_set"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/iv_right_bg"
        android:background="@color/color_camera_set_bg"
        android:layout_width="@dimen/dp_90"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <include
        android:id="@+id/view_camera_set"
        android:layout_width="@dimen/dp_0"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="3:4"
        app:layout_constraintRight_toLeftOf="@+id/iv_right_bg"
        app:layout_constraintTop_toTopOf="parent"
        layout="@layout/view_right_camera_set"/>
</androidx.constraintlayout.widget.ConstraintLayout>
