<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:bind="http://schemas.android.com/apk/res-auto"
    android:tag="layout/view_layout_setting_camera_0"
    android:background="@color/black"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.ipotensic.kernel.view.CommonTitleView
        android:id="@+id/view_title"
        android:background="@drawable/bg_setting_calibration_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        bind:tvTitle="@string/txt_flight_camera"/>
    <ScrollView
        android:orientation="vertical"
        android:id="@+id/layout_setting"
        android:paddingLeft="@dimen/dp_16"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_48">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColorHighlight="@color/color_gray"
                android:id="@+id/tv_general_setting"
                android:paddingLeft="@dimen/dp_flight_setting_padding_left_right"
                android:paddingBottom="4dp"
                android:layout_marginTop="@dimen/dp_flight_setting_padding_left_right"
                android:text="@string/txt_general_settings"
                bind:layout_constraintLeft_toLeftOf="parent"
                bind:layout_constraintTop_toTopOf="parent"
                style="@style/font_gray_13"/>
            <View
                android:id="@+id/view_general_settings"
                android:background="@drawable/bg_setting_calibration_2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                bind:layout_constraintBottom_toBottomOf="@+id/space_general"
                bind:layout_constraintEnd_toEndOf="parent"
                bind:layout_constraintStart_toStartOf="parent"
                bind:layout_constraintTop_toBottomOf="@+id/tv_general_setting"/>
            <TextView
                android:id="@+id/tvWhiteBalanceTip"
                android:layout_marginTop="@dimen/dp_flight_setting_padding_left_right"
                android:text="@string/white_balance_color_temperature"
                android:layout_marginStart="@dimen/dp_15"
                bind:layout_constraintLeft_toLeftOf="@+id/view_general_settings"
                bind:layout_constraintTop_toTopOf="@+id/view_general_settings"
                style="@style/font_white_15"/>
            <TextView
                android:gravity="center"
                android:id="@+id/tv_auto_white_balance"
                android:tag="binding_1"
                android:background="@drawable/bg_format_sd_round_corner"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="@dimen/size_flight_setting_camera_button_width"
                android:layout_height="@dimen/size_flight_setting_camera_button_height"
                android:layout_marginRight="@dimen/dp_24"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                bind:layout_constraintBottom_toBottomOf="@+id/tvWhiteBalanceTip"
                bind:layout_constraintRight_toRightOf="parent"
                bind:layout_constraintTop_toTopOf="@+id/tvWhiteBalanceTip"
                style="@style/font_white_13"/>
            <com.ipotensic.kernel.view.CursorEditText
                android:gravity="center"
                android:id="@+id/edtWhiteBalance"
                android:tag="binding_2"
                android:background="@mipmap/img_bg_white_input_stroke"
                android:layout_width="@dimen/dp_70"
                android:layout_marginTop="@dimen/dp_flight_setting_padding_left_right"
                android:cursorVisible="true"
                android:numeric="integer"
                android:layout_weight="1"
                android:imeOptions="flagNoExtractUi|flagNoFullscreen"
                bind:layout_constraintStart_toStartOf="@+id/tvWhiteBalanceTip"
                bind:layout_constraintTop_toBottomOf="@+id/tvWhiteBalanceTip"
                style="@style/font_blue_15"/>
            <com.ipotensic.kernel.view.CustomSeekbar
                android:id="@+id/sb_white_balance"
                android:tag="binding_3"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_30"
                android:progressDrawable="@drawable/bg_white_balance_seekbar"
                android:layout_marginEnd="@dimen/dp_24"
                android:splitTrack="false"
                bind:layout_constraintBottom_toBottomOf="@+id/edtWhiteBalance"
                bind:layout_constraintLeft_toRightOf="@+id/edtWhiteBalance"
                bind:layout_constraintRight_toRightOf="parent"
                bind:layout_constraintTop_toTopOf="@+id/edtWhiteBalance"
                bind:layout_constraintWidth_percent="0.8"/>
            <View
                android:id="@+id/line1"
                android:background="@color/color_gray"
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/dp_flight_setting_padding_left_right"
                android:layout_marginRight="@dimen/dp_24"
                bind:layout_constraintBottom_toTopOf="@+id/tvAuxLine"
                bind:layout_constraintLeft_toLeftOf="@+id/tvWhiteBalanceTip"
                bind:layout_constraintRight_toRightOf="parent"
                bind:layout_constraintTop_toBottomOf="@+id/edtWhiteBalance"/>
            <TextView
                android:textSize="@dimen/txt_size_setting_big"
                android:id="@+id/tvAuxLine"
                android:layout_marginTop="@dimen/dp_flight_setting_padding_left_right"
                android:text="@string/txt_auxiliary_line"
                bind:layout_constraintLeft_toLeftOf="@+id/tvWhiteBalanceTip"
                bind:layout_constraintTop_toBottomOf="@+id/line1"
                bind:layout_goneMarginStart="@dimen/dp_15"
                style="@style/font_white_15"/>
            <com.ipotensic.kernel.view.CommonSelectionView
                android:id="@+id/grid_layout"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_32"
                android:layout_marginRight="@dimen/dp_24"
                bind:layout_constraintBottom_toBottomOf="@+id/tvAuxLine"
                bind:layout_constraintRight_toRightOf="parent"
                bind:layout_constraintTop_toTopOf="@+id/tvAuxLine"
                bind:layout_constraintWidth_percent="0.4615"
                bind:singleSelection="false"/>
            <View
                android:id="@+id/line2"
                android:background="@color/color_gray"
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/dp_flight_setting_padding_left_right"
                android:layout_marginRight="@dimen/dp_24"
                bind:layout_constraintLeft_toLeftOf="@+id/tvWhiteBalanceTip"
                bind:layout_constraintRight_toRightOf="parent"
                bind:layout_constraintTop_toBottomOf="@+id/tvAuxLine"/>
            <TextView
                android:id="@+id/tvSeg"
                android:layout_marginTop="@dimen/dp_flight_setting_padding_left_right"
                android:text="@string/txt_seg_rec"
                bind:layout_constraintLeft_toLeftOf="@+id/tvAuxLine"
                bind:layout_constraintTop_toBottomOf="@+id/line2"
                style="@style/font_white_15"/>
            <View
                android:id="@+id/space_general"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_15"
                bind:layout_constraintStart_toStartOf="parent"
                bind:layout_constraintTop_toBottomOf="@+id/tvSeg"/>
            <com.ipotensic.kernel.view.CommonSelectionView
                android:id="@+id/seg_rec_layout"
                android:visibility="visible"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_32"
                android:layout_marginRight="@dimen/dp_24"
                bind:childText1="@string/txt_auto"
                bind:childText2="1’"
                bind:childText3="3’"
                bind:childText4="5’"
                bind:layout_constraintBottom_toBottomOf="@+id/tvSeg"
                bind:layout_constraintRight_toRightOf="parent"
                bind:layout_constraintTop_toTopOf="@+id/tvSeg"
                bind:layout_constraintWidth_percent="0.622"/>
            <TextView
                android:textColorHighlight="@color/color_gray"
                android:id="@+id/tv_sd_card"
                android:paddingLeft="@dimen/dp_flight_setting_padding_left_right"
                android:paddingBottom="4dp"
                android:layout_marginTop="@dimen/dp_flight_setting_padding_left_right"
                android:text="@string/sdcard"
                bind:layout_constraintLeft_toLeftOf="parent"
                bind:layout_constraintTop_toBottomOf="@+id/view_general_settings"
                style="@style/font_gray_13"/>
            <View
                android:id="@+id/view_sd_card"
                android:background="@drawable/bg_setting_calibration_2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                bind:layout_constraintStart_toStartOf="parent"
                bind:layout_constraintTop_toBottomOf="@+id/tv_sd_card"/>
            <TextView
                android:id="@+id/tvRemainTips"
                android:text="@string/txt_remain_capacity"
                android:layout_marginStart="@dimen/dp_15"
                bind:layout_constraintBottom_toBottomOf="@+id/line3"
                bind:layout_constraintLeft_toLeftOf="@+id/view_sd_card"
                bind:layout_constraintTop_toTopOf="@+id/view_sd_card"
                style="@style/font_white_15"/>
            <TextView
                android:tag="binding_4"
                android:layout_marginRight="@dimen/dp_24"
                bind:layout_constraintBottom_toBottomOf="@+id/tvRemainTips"
                bind:layout_constraintRight_toRightOf="parent"
                bind:layout_constraintTop_toTopOf="@+id/tvRemainTips"
                style="@style/font_white_13"/>
            <View
                android:id="@+id/line3"
                android:background="@color/color_gray"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_24"
                bind:layout_constraintBottom_toBottomOf="@+id/view_sd_card"
                bind:layout_constraintLeft_toLeftOf="@+id/view_sd_card"
                bind:layout_constraintRight_toRightOf="@+id/view_sd_card"
                bind:layout_constraintTop_toTopOf="@+id/view_sd_card"/>
            <TextView
                android:id="@+id/tvSdCardOption"
                android:text="@string/txt_card_operation"
                bind:layout_constraintBottom_toBottomOf="@+id/view_sd_card"
                bind:layout_constraintLeft_toLeftOf="@+id/view_sd_card"
                bind:layout_constraintStart_toStartOf="@+id/tvRemainTips"
                bind:layout_constraintTop_toTopOf="@+id/line3"
                style="@style/font_white_15"/>
            <TextView
                android:gravity="center"
                android:id="@+id/tv_format"
                android:tag="binding_5"
                android:background="@drawable/bg_flight_setting_format_sd"
                android:layout_width="@dimen/size_flight_setting_camera_button_width"
                android:layout_height="@dimen/size_flight_setting_camera_button_height"
                android:layout_marginRight="@dimen/dp_24"
                android:text="@string/format"
                android:textAllCaps="false"
                bind:layout_constraintBottom_toBottomOf="@+id/tvSdCardOption"
                bind:layout_constraintRight_toRightOf="parent"
                bind:layout_constraintTop_toTopOf="@+id/tvSdCardOption"
                style="@style/font_white_13"/>
            <TextView
                android:textColorHighlight="@color/color_gray"
                android:id="@+id/tv_others"
                android:paddingLeft="@dimen/dp_flight_setting_padding_left_right"
                android:paddingBottom="4dp"
                android:layout_marginTop="@dimen/dp_flight_setting_padding_left_right"
                android:text="@string/left_others"
                bind:layout_constraintLeft_toLeftOf="parent"
                bind:layout_constraintTop_toBottomOf="@+id/view_sd_card"
                style="@style/font_gray_13"/>
            <View
                android:id="@+id/view_others"
                android:background="@drawable/bg_setting_calibration_2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                bind:layout_constraintTop_toBottomOf="@+id/tv_others"/>
            <TextView
                android:id="@+id/tvWaterMark"
                android:layout_marginTop="@dimen/dp_15"
                android:text="@string/camera_watermark"
                android:layout_marginStart="@dimen/dp_15"
                bind:layout_constraintLeft_toLeftOf="@+id/view_others"
                bind:layout_constraintTop_toBottomOf="@+id/tv_others"
                style="@style/font_white_15"/>
            <com.ipotensic.kernel.view.SwitchButton
                android:id="@+id/sb_water"
                android:tag="binding_6"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginEnd="@dimen/dp_24"
                bind:layout_constraintBottom_toBottomOf="@+id/tvWaterMark"
                bind:layout_constraintRight_toRightOf="@+id/view_others"
                bind:layout_constraintTop_toTopOf="@+id/tvWaterMark"/>
            <View
                android:id="@+id/line4"
                android:background="@color/color_gray"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/dp_flight_setting_padding_left_right"
                android:layout_marginRight="@dimen/dp_flight_setting_padding_left_right"
                android:layout_marginHorizontal="@dimen/dp_flight_setting_padding_left_right"
                bind:layout_constraintBottom_toBottomOf="@+id/view_others"
                bind:layout_constraintLeft_toLeftOf="@+id/view_others"
                bind:layout_constraintRight_toRightOf="@+id/view_others"
                bind:layout_constraintTop_toTopOf="@+id/view_others"/>
            <TextView
                android:id="@+id/tvPhotoLocationTips"
                android:text="@string/txt_photo_gps_location"
                bind:layout_constraintBottom_toBottomOf="@+id/view_others"
                bind:layout_constraintLeft_toLeftOf="@+id/tvWaterMark"
                bind:layout_constraintTop_toTopOf="@+id/line4"
                style="@style/font_white_15"/>
            <com.ipotensic.kernel.view.SwitchButton
                android:id="@+id/switch_btn_photo_gps_location"
                android:tag="binding_7"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginRight="@dimen/dp_24"
                bind:layout_constraintBottom_toBottomOf="@+id/tvPhotoLocationTips"
                bind:layout_constraintRight_toRightOf="parent"
                bind:layout_constraintTop_toTopOf="@+id/tvPhotoLocationTips"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</FrameLayout>
