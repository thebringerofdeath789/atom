<?xml version="1.0" encoding="utf-8"?>
<com.ipotensic.baselib.views.ShadowLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:yc_cornerRadius="@dimen/dp_7"
    app:yc_shadowColor="@color/colorTranspercentText"
    app:yc_shadowLimit="@dimen/dp_6"
    app:yc_topShow="false">
    <LinearLayout
        android:orientation="horizontal"
        android:background="@drawable/bg_left_error_tips"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_tip_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:src="@mipmap/icon_fly_error_tips"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_10">
            <TextView
                android:textSize="@dimen/sp_9"
                android:textColor="@color/color_alarm_error_text"
                android:id="@+id/tv_tip_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/warn"
                android:layout_toRightOf="@+id/img_tip_icon"/>
            <TextView
                android:textSize="@dimen/sp_10"
                android:textColor="@color/color_alarm_error_text"
                android:id="@+id/tv_tip_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Msg"
                android:layout_below="@+id/tv_tip_title"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@+id/tv_tip_title"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_tip_title"/>
        </LinearLayout>
    </LinearLayout>
</com.ipotensic.baselib.views.ShadowLayout>
