<?xml version="1.0" encoding="utf-8"?>
<com.ipotensic.baselib.views.ShadowLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:yc_cornerRadius="@dimen/dp_14"
    app:yc_shadowColor="@color/colorTranspercentText"
    app:yc_shadowLimit="@dimen/dp_6">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:id="@+id/tv_title"
            android:background="@drawable/bg_dialog_repair_top"
            android:paddingLeft="@dimen/dp_8"
            android:paddingRight="@dimen/dp_8"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_43"
            android:lineSpacingExtra="-5dp"
            android:paddingHorizontal="@dimen/dp_8"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/font_white_15"/>
        <ScrollView
            android:id="@+id/sv_content"
            android:background="@color/color_bg_upgrade_dialog"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title">
            <TextView
                android:textSize="@dimen/sp_12"
                android:gravity="center"
                android:id="@+id/tv_content"
                android:paddingLeft="@dimen/dp_24"
                android:paddingTop="@dimen/dp_16"
                android:paddingRight="@dimen/dp_24"
                android:paddingBottom="@dimen/dp_16"
                android:layout_width="match_parent"
                android:minHeight="@dimen/dp_64"
                android:paddingHorizontal="@dimen/dp_24"
                android:paddingVertical="@dimen/dp_16"
                style="@style/font_white_13"/>
        </ScrollView>
        <TextView
            android:gravity="center"
            android:id="@+id/btn_cancel"
            android:background="@drawable/bg_left_bottom_corner"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_43"
            android:text="@string/dialog_cancel"
            android:textAllCaps="false"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/btn_confirm"
            app:layout_constraintTop_toBottomOf="@+id/sv_content"
            style="@style/font_gray_15"/>
        <TextView
            android:gravity="center"
            android:id="@+id/btn_confirm"
            android:background="@drawable/bg_right_bottom_corner"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_43"
            android:text="@string/dialog_confirm"
            android:textAllCaps="false"
            app:layout_constraintLeft_toRightOf="@+id/btn_cancel"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sv_content"
            style="@style/font_white_15"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.ipotensic.baselib.views.ShadowLayout>
