<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog_shape"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:background="@drawable/bg_dialog_no_upgrade_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/sp_15"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:id="@+id/tv_geo_calibration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_10"
            android:text="@string/sys_calibration_geomagnetic"
            android:layout_centerInParent="true"/>
        <ImageView
            android:id="@+id/iv_cancel"
            android:padding="10dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_calibration_fail"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/img_geo_vertical"
        android:visibility="gone"
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_110"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:src="@drawable/anim_geo_vertical"/>
    <ImageView
        android:id="@+id/img_geo_horizontal"
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_110"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:src="@drawable/anim_geo_horizontal"/>
    <ScrollView
        android:id="@+id/scroll_view"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:scrollbars="none"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_weight="0.3">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_2">
            <TextView
                android:textSize="@dimen/sp_10"
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:id="@+id/tv_mini_geo_tips"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_4"
                android:layout_marginRight="@dimen/dp_4"
                android:text="@string/setting_mini_geo_tip"/>
            <RelativeLayout
                android:orientation="horizontal"
                android:id="@+id/ll_horizontal"
                android:paddingBottom="@dimen/dp_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/sp_10"
                    android:textColor="@color/colorWhite"
                    android:gravity="center"
                    android:id="@+id/tv_one"
                    android:background="@mipmap/icon_geo_prompts_step"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"/>
                <TextView
                    android:textSize="@dimen/sp_10"
                    android:textColor="@color/colorWhite"
                    android:ellipsize="none"
                    android:layout_gravity="center"
                    android:id="@+id/tv_content_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="@string/dialog_geo_calibration_tips_one"
                    android:singleLine="false"
                    android:layout_toRightOf="@+id/tv_one"
                    android:lineSpacingExtra="-3dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:orientation="horizontal"
                android:id="@+id/ll_vertical"
                android:paddingBottom="@dimen/dp_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5">
                <TextView
                    android:textSize="@dimen/sp_10"
                    android:textColor="@color/colorWhite"
                    android:gravity="center"
                    android:id="@+id/tv_two"
                    android:background="@mipmap/icon_geo_prompts_step"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"/>
                <TextView
                    android:textSize="@dimen/sp_10"
                    android:textColor="@color/colorWhite"
                    android:layout_gravity="center"
                    android:id="@+id/tv_content_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="@string/dialog_geo_calibration_tips_two"
                    android:layout_toRightOf="@+id/tv_two"
                    android:lineSpacingExtra="-3dp"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
    <Button
        android:textSize="@dimen/sp_14"
        android:textColor="@color/colorWhite"
        android:id="@+id/btn_start"
        android:background="@drawable/bg_dialog_no_upgrade_bottom"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:text="@string/sys_calibration_start"
        android:textAllCaps="false"/>
</LinearLayout>
