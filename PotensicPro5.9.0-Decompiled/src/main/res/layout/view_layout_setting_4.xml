<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorOpaque"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textSize="@dimen/sp_14"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        android:id="@+id/tv_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:text="@string/sys_battery_set"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/iv_back"
        android:padding="@dimen/dp_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_bg_setting_back"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_marginTop="@dimen/dp_25"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_setting">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <include
                android:id="@+id/include1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                app:layout_constraintHeight_percent="0.366"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                layout="@layout/view_layout_setting4_item1"/>
            <View
                android:id="@+id/line1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/include1"
                style="@style/view_line"/>
            <TextView
                android:textSize="@dimen/sp_14"
                android:textColor="@color/colorWhite"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_16"
                android:paddingRight="@dimen/dp_30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sys_battery_type"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line1"/>
            <TextView
                android:textSize="@dimen/sp_14"
                android:textColor="@color/colorWhite"
                android:id="@+id/tv_battery_type"
                android:padding="@dimen/dp_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/test_data"
                android:layout_marginEnd="@dimen/dp_30"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line1"/>
            <View
                android:id="@+id/line2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_battery_type"
                style="@style/view_line"/>
            <TextView
                android:textSize="@dimen/sp_14"
                android:textColor="@color/colorWhite"
                android:padding="@dimen/dp_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sys_battery_cycle_times"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line2"/>
            <TextView
                android:textSize="@dimen/sp_14"
                android:textColor="@color/colorWhite"
                android:id="@+id/tv_cycle_times"
                android:padding="@dimen/dp_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/test_data"
                android:layout_marginEnd="@dimen/dp_30"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line2"/>
            <View
                android:id="@+id/line3"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_cycle_times"
                style="@style/view_line"/>
            <TextView
                android:textSize="@dimen/sp_14"
                android:textColor="@color/colorWhite"
                android:padding="@dimen/dp_16"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sys_battery_estimated_flight_time"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line3"/>
            <TextView
                android:textSize="@dimen/sp_14"
                android:textColor="@color/colorWhite"
                android:id="@+id/tv_estimated_flight_time"
                android:padding="@dimen/dp_16"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/test_data"
                android:layout_marginEnd="@dimen/dp_30"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line3"/>
            <View
                android:id="@+id/line4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_cycle_times"
                style="@style/view_line"/>
            <TextView
                android:textSize="@dimen/sp_14"
                android:textColor="@color/colorWhite"
                android:padding="@dimen/dp_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sys_battery_capacity"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line4"/>
            <TextView
                android:textSize="@dimen/sp_14"
                android:textColor="@color/colorWhite"
                android:id="@+id/tv_battery_capacity"
                android:padding="@dimen/dp_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/test_data"
                android:layout_marginEnd="@dimen/dp_30"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line4"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
